<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>

        <variable
            name="goal"
            type="com.tarrakki.api.model.GoalSavedResponse.Data" />
    </data>

    <android.support.constraint.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/default_space"
        android:layout_marginEnd="@dimen/default_space"
        android:background="@drawable/shape_cart_view"
        android:elevation="@dimen/space_2"
        android:padding="@dimen/space_8"
        tools:layout_marginBottom="@dimen/space_16">

        <ImageView
            android:id="@+id/ivItem"
            imgUrl="@{goal.goalDetails.goalImage}"
            android:layout_width="88dp"
            android:layout_height="88dp"
            android:adjustViewBounds="true"
            android:background="@drawable/shape_section_item_bg"
            android:elevation="2dp"
            android:paddingStart="@dimen/space_8"
            android:paddingEnd="@dimen/space_8"
            android:paddingBottom="@dimen/space_8"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            tools:src="@drawable/own_a_home" />

        <TextView
            android:id="@+id/tvName"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/space_8"
            android:layout_marginTop="@dimen/space_8"
            android:layout_marginEnd="8dp"
            android:fontFamily="@font/lato_semibold"
            android:maxLines="1"
            android:minLines="1"
            android:text="@{goal.goalDetails.goal}"
            android:textAllCaps="true"
            android:textAppearance="@style/TextAppearance.AppCompat.Small"
            android:textColor="@color/item_selected_color"
            app:layout_constraintEnd_toStartOf="@+id/ivEdit"
            app:layout_constraintStart_toEndOf="@id/ivItem"
            app:layout_constraintTop_toTopOf="parent"
            tools:text="Home Goal" />

        <ImageView
            android:id="@+id/ivDelete"
            android:layout_width="32dp"
            android:layout_height="32dp"
            android:padding="@dimen/space_8"
            android:src="@drawable/delete"
            app:layout_constraintBottom_toBottomOf="@id/tvName"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="@id/tvName" />

        <ImageView
            android:id="@+id/ivEdit"
            android:layout_width="32dp"
            android:layout_height="32dp"
            android:layout_marginEnd="@dimen/space_8"
            android:src="@drawable/ic_edit"
            android:tint="@color/pdlg_color_green"
            app:layout_constraintBottom_toBottomOf="@id/tvName"
            app:layout_constraintEnd_toStartOf="@id/ivDelete"
            app:layout_constraintTop_toTopOf="@id/tvName" />

        <View
            android:id="@+id/mDivider"
            android:layout_width="0dp"
            android:layout_height="1dp"
            android:layout_marginStart="@dimen/space_8"
            android:layout_marginTop="@dimen/space_8"
            android:background="@color/darker_gray"
            app:layout_constraintStart_toEndOf="@id/ivItem"
            app:layout_constraintTop_toBottomOf="@id/tvName" />

        <TextView
            android:id="@+id/tvAmountL"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/default_space"
            android:text="@string/amount"
            android:textAppearance="@style/TextAppearance.AppCompat.Caption"
            app:layout_constraintEnd_toEndOf="@id/gdlCenter"
            app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintStart_toStartOf="@id/mDivider"
            app:layout_constraintTop_toBottomOf="@id/tvName" />

        <TextView
            android:id="@+id/tvAmount"
            price="@{goal.fv}"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/lato_semibold"
            android:textAppearance="@style/TextAppearance.AppCompat.Caption"
            android:textColor="@color/semi_black"
            app:layout_constraintEnd_toEndOf="@id/gdlCenter"
            app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintStart_toStartOf="@id/mDivider"
            app:layout_constraintTop_toBottomOf="@+id/tvAmountL"
            tools:text="\u20B939.55" />

        <TextView
            android:id="@+id/tvAddGoal"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/shape_btn_idle_bg"
            android:paddingStart="@dimen/space_8"
            android:paddingTop="@dimen/space_4"
            android:paddingEnd="@dimen/space_8"
            android:paddingBottom="@dimen/space_4"
            android:text="@string/add_a_goal"
            android:textAllCaps="true"
            android:textColor="@color/white"
            android:textSize="@dimen/sp8"
            app:layout_constraintBaseline_toBaselineOf="@id/tvAmountL"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toBottomOf="@id/mDivider" />


        <TextView
            android:id="@+id/tvDurationsL"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/duration"
            android:layout_marginStart="@dimen/space_8"
            android:textAppearance="@style/TextAppearance.AppCompat.Caption"
            app:layout_constraintBaseline_toBaselineOf="@id/tvAmountL"
            app:layout_constraintEnd_toStartOf="@id/tvAddGoal"
            app:layout_constraintHorizontal_bias="0.05"
            app:layout_constraintEnd_toEndOf="@id/tvAddGoal"
            app:layout_constraintStart_toEndOf="@id/tvAmountL"
            app:layout_constraintStart_toStartOf="@id/gdlCenter" />

        <TextView
            android:id="@+id/tvDurations"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/lato_semibold"
            android:text='@{goal.n+" Years"}'
            android:textAppearance="@style/TextAppearance.AppCompat.Caption"
            android:textColor="@color/semi_black"
            app:layout_constraintEnd_toEndOf="@id/tvAddGoal"
            app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintStart_toStartOf="@id/tvDurationsL"
            app:layout_constraintTop_toBottomOf="@id/tvDurationsL"
            tools:text="5 years" />

        <android.support.constraint.Guideline
            android:id="@+id/gdlCenter"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            app:layout_constraintGuide_percent="0.55" />

    </android.support.constraint.ConstraintLayout>
</layout>