<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>

        <variable
            name="widget"
            type="com.tarrakki.module.transactionConfirm.TransactionConfirmVM.TranscationStatuss" />

        <import type="android.view.View" />

    </data>

    <android.support.constraint.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_horizontal">

        <LinearLayout
            android:id="@+id/imgTimeline"
            android:layout_width="wrap_content"
            android:layout_height="0dp"
            android:orientation="vertical"
            app:layout_constraintBottom_toBottomOf="@+id/llDesc"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            tools:ignore="MissingConstraints">

            <ImageView
                android:id="@+id/imgStatus"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                imgUrl="@{widget.actualStatusIcon}"
                tools:text="SBI Banking and Financial Services Growth Direct Plan" />

            <View
                android:id="@+id/verticalDivider"
                android:layout_width="1dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:background="@color/lighter_gray" />

        </LinearLayout>

        <LinearLayout
            android:paddingBottom="@dimen/space_8"
            android:id="@+id/llDesc"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="8dp"
            android:layout_marginEnd="8dp"
            android:orientation="vertical"
            app:layout_constraintEnd_toStartOf="@+id/tvStatus"
            app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintStart_toEndOf="@+id/imgTimeline"
            app:layout_constraintTop_toTopOf="@id/tvStatus">
            <TextView
                android:id="@+id/tvName"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@{widget.name}"
                android:textAppearance="@style/TextAppearance.AppCompat.Small"
                android:textColor="@color/black"
                tools:text="saafafafaffffffffffffffffff" />
            <TextView
                android:id="@+id/tvDescription"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@{widget.description}"
                android:textAppearance="@style/TextAppearance.AppCompat.Small"
                android:textColor="@color/darker_gray" />
        </LinearLayout>

        <TextView
            android:id="@+id/tvStatus"
            android:layout_width="90dp"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            background="@{widget.actualStatusDrawable}"
            android:paddingStart="@dimen/space_12"
            android:paddingTop="@dimen/space_4"
            android:paddingEnd="@dimen/space_12"
            android:gravity="center"
            tools:text="In Progress"
            android:elevation="@dimen/space_2"
            android:paddingBottom="@dimen/space_4"
            android:text="@{widget.actualStatus}"
            android:textAppearance="@style/Base.TextAppearance.AppCompat.Caption"
            android:textColor="@color/white"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

    </android.support.constraint.ConstraintLayout>

</layout>