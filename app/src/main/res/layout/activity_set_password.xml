<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>

        <variable
            name="vm"
            type="com.tarrakki.module.setpassword.SetPasswordVM" />
    </data>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:fillViewport="true">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@color/white">

            <ImageView
                android:padding="@dimen/_5sdp"
                android:id="@+id/ivBack"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/default_space"
                android:layout_marginTop="@dimen/_30sdp"
                android:src="@drawable/ic_back_arrow_black"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <EditText
                android:text="@={vm.password}"
                android:layout_marginTop="@dimen/_35sdp"
                android:id="@+id/etPassword"
                android:gravity="center_vertical"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/_20sdp"
                android:layout_marginEnd="@dimen/_20sdp"
                android:background="@drawable/bg_edit_text_corner"
                android:ellipsize="end"
                android:fontFamily="@font/poppins"
                android:hint="@string/enter_password"
                android:inputType="textPassword"
                android:maxLines="1"
                android:paddingStart="@dimen/_5sdp"
                android:paddingTop="@dimen/_10sdp"
                android:paddingEnd="@dimen/_20sdp"
                android:paddingBottom="@dimen/_10sdp"
                android:textAppearance="@style/TextAppearance.AppCompat.Small"
                android:textColor="@color/black"
                android:textColorHint="@color/auto_cancel"
                android:textSize="@dimen/_12ssp"
                app:layout_constraintTop_toBottomOf="@+id/ivBack" />

            <ImageView
                android:id="@+id/ivEye"
                android:src="@drawable/ic_eye_show_password"
                app:layout_constraintTop_toTopOf="@+id/etPassword"
                app:layout_constraintBottom_toBottomOf="@+id/etPassword"
                app:layout_constraintEnd_toEndOf="@+id/etPassword"
                android:layout_marginEnd="@dimen/_6sdp"
                android:padding="@dimen/_5sdp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>

            <TextView
                android:layout_marginTop="@dimen/_5sdp"
                android:id="@+id/tvForgotPassword"
                app:layout_constraintEnd_toEndOf="@+id/etPassword"
                android:text="@string/forgot_password_"
                android:layout_marginBottom="@dimen/_12sdp"
                android:fontFamily="@font/poppins_medium"
                android:textColor="@color/bg_choose_plan"
                android:textSize="@dimen/_12ssp"
                app:layout_constraintTop_toBottomOf="@+id/etPassword"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>


            <TextView
                android:id="@+id/tvNotSpam"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="@dimen/_12sdp"
                android:drawablePadding="@dimen/_5sdp"
                android:fontFamily="@font/poppins"
                android:text="@string/you_are_on_final_step"
                android:textColor="@color/bg_choose_plan"
                android:textSize="@dimen/_12ssp"
                app:layout_constraintBottom_toTopOf="@+id/btnContinue"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent" />


            <TextView
                android:id="@+id/btnContinue"
                android:text="@string/continues"
                android:textColor="@color/white"
                android:gravity="center"
                android:textSize="@dimen/_14ssp"
                android:paddingTop="@dimen/_10sdp"
                android:textAllCaps="false"
                android:fontFamily="@font/poppins_semibold"
                android:paddingBottom="@dimen/_10sdp"
                android:layout_marginStart="@dimen/_20sdp"
                android:layout_marginEnd="@dimen/_20sdp"
                app:layout_constraintBottom_toBottomOf="parent"
                android:layout_marginBottom="@dimen/_16sdp"
                android:background="@drawable/bg_purple_button"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"/>

        </androidx.constraintlayout.widget.ConstraintLayout>
    </ScrollView>

</layout>
