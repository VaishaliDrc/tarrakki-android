<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <data>

        <variable
            name="goalSummary"
            type="com.tarrakki.module.yourgoal.GoalSummary" />
    </data>

    <RelativeLayout
        android:id="@+id/llContainer2"
        android:layout_width="80dp"
        android:layout_height="wrap_content"
        android:background="@drawable/shape_rounded_gray"
        android:gravity="center_vertical"
        android:orientation="horizontal"
        android:padding="@dimen/space_8">

        <EditText
            android:id="@+id/edtDurations"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_marginStart="@dimen/space_8"
            android:layout_marginEnd="@dimen/space_8"
            android:layout_toStartOf="@+id/tvDurations"
            android:background="@null"
            android:inputType="number"
            android:maxLength="2"
            android:text="@={goalSummary.txt}"
            android:textAppearance="@style/TextAppearance.AppCompat.Small"
            android:textColor="@color/semi_black"
            app:isPositiveCurrency="@{true}" />

        <TextView
            android:id="@+id/tvDurations"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_marginStart="@dimen/space_8"
            android:layout_marginEnd="@dimen/space_8"
            android:fontFamily="@font/lato_semibold"
            android:text="%"
            android:textAppearance="@style/TextAppearance.AppCompat.Small"
            android:textColor="@color/semi_black" />

    </RelativeLayout>
</layout>