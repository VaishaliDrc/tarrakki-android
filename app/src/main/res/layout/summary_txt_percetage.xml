<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools">

    <data>

        <variable
            name="goalSummary"
            type="com.tarrakki.module.yourgoal.GoalSummary" />

        <variable
            name="onAction"
            type="android.widget.TextView.OnEditorActionListener" />

    </data>

    <RelativeLayout
        android:id="@+id/llContainer2"
        android:layout_width="@dimen/_60sdp"
        android:layout_height="wrap_content"
        android:background="@drawable/shape_rectangle_gray"
        android:gravity="center_vertical"
        android:orientation="horizontal"
        android:padding="@dimen/space_4">

        <EditText
            android:id="@+id/edtDurations"
            maxValue="@{99}"
            minValue="@{1}"
            onEditorAction="@{onAction}"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_marginStart="@dimen/space_4"
            android:layout_toStartOf="@+id/tvDurations"
            android:background="@null"
            android:gravity="center"
            android:imeOptions="actionDone"
            android:inputType="numberDecimal"
            android:text="@={goalSummary.value}"
            android:textAppearance="@style/TextAppearance.AppCompat.Small"
            android:textColor="@color/semi_black"
            tools:text="55.59" />

        <TextView
            android:id="@+id/tvDurations"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_marginEnd="@dimen/space_4"
            android:fontFamily="@font/lato_semibold"
            android:text="%"
            android:textAppearance="@style/TextAppearance.AppCompat.Small"
            android:textColor="@color/semi_black" />

    </RelativeLayout>
</layout>