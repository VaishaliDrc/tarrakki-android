<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>

        <variable
            name="widget"
            type="com.tarrakki.api.model.ConfirmOrderResponse.Data.OrderLine" />

        <variable
            name="onCheckedChange"
            type="android.view.View.OnClickListener" />
    </data>

    <android.support.constraint.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/default_space"
        android:layout_marginEnd="@dimen/default_space"
        android:background="@drawable/shape_cart_view"
        android:elevation="@dimen/space_2"
        android:padding="@dimen/space_8">

        <TextView
            android:id="@+id/tvName"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginEnd="8dp"
            android:text="@{widget.name}"
            android:textAppearance="@style/TextAppearance.AppCompat.Small"
            android:textColor="@color/item_selected_color"
            app:layout_constraintEnd_toStartOf="@+id/tvType"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            tools:text="SBI Banking and Financial Services Growth Direct Plan" />

        <TextView
            android:id="@+id/tvType"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@{widget.fundIdSchemeType}"
            android:textAppearance="@style/TextAppearance.AppCompat.Small"
            android:textColor="@color/black"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            tools:text="Debt-Bounds" />

        <TextView
            android:id="@+id/tvSIPLabel"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/space_16"
            android:background="@drawable/shape_edt_gray_round"
            android:paddingStart="@dimen/space_16"
            android:paddingTop="@dimen/space_8"
            android:paddingEnd="@dimen/space_16"
            android:paddingBottom="@dimen/space_8"
            android:text="@{widget.title}"
            android:textAllCaps="true"
            android:textAppearance="@style/TextAppearance.AppCompat.Caption"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/tvName"
            tools:text="@string/sip" />

        <TextView
            android:id="@+id/tvSIP"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/space_8"
            android:fontFamily="@string/returns_sysmbol"
            android:paddingStart="@dimen/space_4"
            android:paddingEnd="@dimen/space_4"
            android:text="@{widget.amount}"
            android:textAllCaps="true"
            android:textColor="@color/black"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/tvSIPLabel"
            tools:text="@string/dummy3" />

        <TextView
            android:id="@+id/tvDateL"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/space_8"
            android:text="@string/start_date_"
            android:textAppearance="@style/TextAppearance.AppCompat.Caption"
            android:textColor="@color/black"
            android:visibility="@{widget.hasSIP}"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/tvSIP"
            tools:text="Start Date:" />

        <TextView
            android:id="@+id/tvDate"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/space_4"
            android:layout_marginTop="@dimen/space_8"
            android:text="@{widget.startDate}"
            android:textAppearance="@style/TextAppearance.AppCompat.Caption"
            android:visibility="@{widget.hasSIP}"
            app:layout_constraintStart_toEndOf="@id/tvDateL"
            app:layout_constraintTop_toBottomOf="@+id/tvSIP"
            tools:text="30/03/2019" />

        <CheckBox
            android:id="@+id/cbSIP"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/space_8"
            android:button="@drawable/selector_check_box_gray"
            android:checked="@{widget.firstInstallmentSIP}"
            android:fontFamily="@font/lato_semibold"
            android:gravity="center"
            android:onClick="@{onCheckedChange}"
            android:padding="@dimen/space_8"
            android:text="@string/first_installment_of_sip_on_toady"
            android:textColor="@color/darker_gray"
            android:textSize="10sp"
            android:visibility="@{widget.hasSIP}"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/tvDateL"
            tools:checked="true" />


        <android.support.constraint.Guideline
            android:id="@+id/guideline6"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            app:layout_constraintGuide_percent="0.66" />


        <TextView
            android:id="@+id/tvLumpsumLabel"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/space_16"
            android:background="@drawable/shape_edt_gray_round"
            android:paddingStart="@dimen/space_16"
            android:paddingTop="@dimen/space_8"
            android:paddingEnd="@dimen/space_16"
            android:paddingBottom="@dimen/space_8"
            android:text="@string/lumpsum"
            android:textAllCaps="true"
            android:textAppearance="@style/TextAppearance.AppCompat.Caption"
            android:visibility="@{widget.haveSIPAndLumpsum}"
            app:layout_constraintStart_toEndOf="@id/guideline6"
            app:layout_constraintTop_toBottomOf="@+id/tvName" />

        <TextView
            android:id="@+id/tvLumpsumAmount"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/space_8"
            android:fontFamily="@string/returns_sysmbol"
            android:paddingStart="@dimen/space_4"
            android:paddingEnd="@dimen/space_4"
            android:text="@{widget.lumpsumAmount}"
            android:textAllCaps="true"
            android:textColor="@color/black"
            android:visibility="@{widget.haveSIPAndLumpsum}"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toEndOf="@id/guideline6"
            app:layout_constraintTop_toBottomOf="@+id/tvSIPLabel"
            tools:text="@string/dummy3" />

        <View
            android:layout_width="1dp"
            android:layout_height="0dp"
            android:layout_marginEnd="@dimen/space_8"
            android:background="@color/darker_gray"
            android:visibility="@{widget.haveSIPAndLumpsum}"
            app:layout_constraintBottom_toBottomOf="@id/cbSIP"
            app:layout_constraintEnd_toStartOf="@id/guideline6"
            app:layout_constraintTop_toTopOf="@id/tvLumpsumLabel" />

    </android.support.constraint.ConstraintLayout>
</layout>