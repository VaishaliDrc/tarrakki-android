<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>

        <import type="android.view.View" />

        <variable
            name="widget"
            type="com.tarrakki.api.model.ConfirmOrderResponse.Data.OrderLine" />

        <variable
            name="onCheckedChange"
            type="android.view.View.OnClickListener" />
        <variable
            name="onLockClick"
            type="android.view.View.OnClickListener" />

    </data>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/default_space"
        android:layout_marginEnd="@dimen/default_space"
        android:background="@drawable/shape_cart_view"
        android:elevation="@dimen/space_2"
        android:padding="@dimen/space_8">

        <TextView
            android:id="@+id/tvName"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginEnd="8dp"
            android:text="@{widget.name}"
            android:textAppearance="@style/TextAppearance.AppCompat.Small"
            android:textColor="@color/item_selected_color"
            app:layout_constraintEnd_toStartOf="@+id/tvType"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            tools:text="SBI Banking and Financial Services Growth Direct Plan" />

        <TextView
            android:id="@+id/tvType"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@{widget.fundIdSchemeType}"
            android:textAppearance="@style/TextAppearance.AppCompat.Small"
            android:textColor="@color/black"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            tools:text="Debt-Bounds" />

        <TextView
            android:id="@+id/tvSIPLabel"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/_10sdp"
            android:background="@drawable/shape_edt_gray_round"
            android:paddingStart="@dimen/space_12"
            android:paddingTop="@dimen/space_4"
            android:paddingEnd="@dimen/space_12"
            android:paddingBottom="@dimen/space_4"
            android:text="@string/sip"
            android:textAllCaps="true"
            android:textColor="@color/black"
            android:visibility="@{widget.hasSIP}"
            android:textAppearance="@style/TextAppearance.AppCompat.Caption"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/viewDivider"
            tools:text="@string/sip" />

        <TextView
            android:id="@+id/tvSIP"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@string/returns_sysmbol"
            android:paddingStart="@dimen/space_4"
            android:paddingEnd="@dimen/space_4"
            android:text="@{widget.amount}"
            android:textAllCaps="true"
            android:textSize="@dimen/_10ssp"
            android:visibility="@{widget.hasSIP}"
            android:textAppearance="@style/Base.TextAppearance.AppCompat.Caption"
            android:textColor="@color/black"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="@+id/tvSIPLabel"
            app:layout_constraintBottom_toBottomOf="@id/tvSIPLabel"
            tools:text="@string/dummy3" />

        <TextView
            android:id="@+id/tvDateL"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/space_4"
            android:layout_marginTop="@dimen/space_8"
            android:text="@string/start_date_"
            android:textAppearance="@style/TextAppearance.AppCompat.Caption"
            android:textColor="@color/black"
            android:visibility="@{widget.hasSIP}"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/tvSIPLabel"
            tools:text="Start Date:" />

        <TextView
            android:id="@+id/tvDate"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/space_4"
            android:layout_marginTop="@dimen/space_8"
            android:gravity="start"
            android:text="@{widget.startDate}"
            android:textColor="@color/black"
            android:textAppearance="@style/TextAppearance.AppCompat.Caption"
            android:visibility="@{widget.hasSIP}"
            app:layout_constraintEnd_toStartOf="@+id/guideline6"
            app:layout_constraintStart_toEndOf="@id/tvDateL"
            app:layout_constraintTop_toBottomOf="@+id/tvSIPLabel"
            tools:text="30/03/2019" />

        <CheckBox
            android:id="@+id/cbSIP"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/space_4"
            android:layout_marginTop="@dimen/space_8"
            android:layout_marginEnd="@dimen/space_8"
            android:button="@drawable/selector_check_box_gray"
            android:checked="@{widget.firstInstallmentSIP}"
            android:fontFamily="@font/lato_semibold"
            android:gravity="start|center_vertical"
            android:onClick="@{onCheckedChange}"
            android:padding="@dimen/space_8"
            android:text="@string/make_the_first_investment_of_sip_today"
            android:textAppearance="@style/TextAppearance.AppCompat.Caption"
            android:textColor="@color/darker_gray"
            android:visibility="@{widget.hasSIP}"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/tvDateL"
            tools:checked="true" />

        <TextView
            android:id="@+id/tvPrimeRatingSIP"
            android:layout_marginStart="@dimen/_4sdp"
            app:layout_constraintTop_toBottomOf="@+id/cbSIP"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginTop="@dimen/_10sdp"
            android:textColor="@color/black"
            android:textAppearance="@style/TextAppearance.AppCompat.Caption"
            android:layout_width="wrap_content"
            android:text="@string/prime_rating"
            android:fontFamily="@font/lato_regular"
            android:layout_height="wrap_content"/>



        <androidx.appcompat.widget.LinearLayoutCompat
            android:id="@+id/llcRating"
            app:layout_constraintTop_toTopOf="@+id/tvPrimeRatingSIP"
            app:layout_constraintStart_toEndOf="@+id/tvPrimeRatingSIP"
            app:layout_constraintBottom_toBottomOf="@+id/tvPrimeRatingSIP"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center|start"
            android:gravity="center|start"
            android:orientation="horizontal">

            <androidx.appcompat.widget.AppCompatRatingBar
                app:layout_constraintTop_toTopOf="@+id/tvPrimeRatingSIP"
                app:layout_constraintStart_toEndOf="@+id/tvPrimeRatingSIP"
                app:layout_constraintBottom_toBottomOf="@+id/tvPrimeRatingSIP"
                android:id="@+id/ratingBarCO"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:numStars="5"
                android:layout_marginStart="@dimen/_5sdp"
                style="?android:attr/ratingBarStyleSmall"
                android:theme="@style/RatingBar"/>

            <androidx.appcompat.widget.AppCompatTextView
                app:layout_constraintTop_toTopOf="@+id/tvPrimeRatingSIP"
                app:layout_constraintStart_toEndOf="@+id/ratingBarCO"
                android:id="@+id/tvRatingEmpty"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/_5sdp"
                android:textSize="@dimen/_10ssp"
                android:textColor="@color/rating_yellow"
                app:fontFamily="@font/lato_bold"
                android:maxLines="1"
                android:ellipsize="end"
                 android:fontFamily="@font/lato_regular"
                tools:text="Lorem Ipsum"/>

        </androidx.appcompat.widget.LinearLayoutCompat>

        <ImageView
            android:onClick="@{onLockClick}"
            android:visibility="visible"
            android:layout_marginTop="@dimen/_5sdp"
            android:src="@drawable/ic_lock_purple"
            android:id="@+id/ivLockPrimeRatingSIP"
            android:padding="@dimen/_5sdp"
            app:layout_constraintTop_toBottomOf="@+id/cbSIP"
            app:layout_constraintStart_toEndOf="@+id/tvPrimeRatingSIP"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>


        <TextView
            android:id="@+id/tvPrimeRecommendSIP"
            app:layout_constraintTop_toBottomOf="@+id/tvPrimeRatingSIP"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="@dimen/_4sdp"
            android:layout_marginTop="@dimen/_5sdp"
            android:textColor="@color/black"
            android:textAppearance="@style/TextAppearance.AppCompat.Caption"
            android:layout_width="wrap_content"
            android:text="@string/prime_recommennd"
            android:fontFamily="@font/lato_regular"
            android:layout_height="wrap_content"/>



        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/tvPrimeRecommned"
            app:layout_constraintTop_toTopOf="@+id/tvPrimeRecommendSIP"
            app:layout_constraintStart_toEndOf="@+id/tvPrimeRecommendSIP"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/_5sdp"
            android:textSize="@dimen/_10ssp"
            primeColor="@{widget.primeRatingData.primeReview}"
            app:fontFamily="@font/lato_bold"
            android:maxLines="1"
            android:ellipsize="end"
            android:fontFamily="@font/lato_regular"
            android:text="@{widget.primeRatingData.primeReview}"
            tools:text="Lorem Ipsum"/>


        <ImageView
            android:onClick="@{onLockClick}"
            android:visibility="visible"
            android:padding="@dimen/_5sdp"
            android:src="@drawable/ic_lock_purple"
            android:id="@+id/ivLockPrimeRecommendSIP"
            app:layout_constraintTop_toBottomOf="@+id/tvPrimeRatingSIP"
            app:layout_constraintStart_toEndOf="@+id/tvPrimeRecommendSIP"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>

        <androidx.constraintlayout.widget.Group
            android:id="@+id/groupLocks"
            app:constraint_referenced_ids="ivLockPrimeRatingSIP,ivLockPrimeRecommendSIP"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>


        <androidx.constraintlayout.widget.Guideline
            android:id="@+id/guideline6"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            app:percentageGuideline="@{widget.isGuideline==true?0.5f:1.0f}"
            tools:layout_constraintGuide_percent="0.5" />


        <TextView
            android:id="@+id/tvLumpsumLabel"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/space_16"
            android:background="@drawable/shape_edt_gray_round"
            android:paddingStart="@dimen/_8sdp"
            android:paddingTop="@dimen/space_4"
            android:paddingEnd="@dimen/space_12"
            android:paddingBottom="@dimen/space_4"
            android:text="@string/lumpsum"
            android:textAllCaps="true"
            android:textColor="@color/black"
            android:textAppearance="@style/TextAppearance.AppCompat.Caption"
            android:visibility="@{widget.hasLumpsum}"
            app:layout_constraintStart_toStartOf= "parent"
            app:layout_constraintTop_toBottomOf="@+id/tvName" />

        <TextView
            android:id="@+id/tvLumpsumAmount"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/_8sdp"
            android:fontFamily="@string/returns_sysmbol"
            android:text="@{widget.lumpsumAmount}"
            android:textAllCaps="true"
            android:textSize="@dimen/_10ssp"
            app:layout_constraintBottom_toBottomOf="@+id/tvLumpsumLabel"
            android:textAppearance="@style/Base.TextAppearance.AppCompat.Caption"
            android:textColor="@color/black"
            android:visibility="@{widget.hasLumpsum}"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="@+id/tvLumpsumLabel"
            tools:text="@string/dummy3" />

        <View
            android:id="@+id/viewDivider"
            android:layout_marginTop="@dimen/_10sdp"
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@color/darker_gray"
            android:visibility="@{widget.haveSIPAndLumpsum}"
            app:layout_constraintTop_toBottomOf="@+id/tvLumpsumLabel"/>

    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>