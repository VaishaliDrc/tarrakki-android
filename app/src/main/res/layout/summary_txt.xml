<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>

        <variable
            name="goalSummary"
            type="com.tarrakki.module.yourgoal.GoalSummary" />
    </data>

    <EditText
        android:id="@+id/edtDurations"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/shape_rounded_gray"
        android:inputType="number"
        android:maxLength="2"
        android:paddingStart="@dimen/space_32"
        android:paddingTop="@dimen/space_8"
        android:paddingEnd="@dimen/space_32"
        android:paddingBottom="@dimen/space_8"
        android:text="@={goalSummary.txt}"
        android:textAppearance="@style/TextAppearance.AppCompat.Small"
        android:textColor="@color/semi_black"
        app:isPositiveCurrency="@{true}"
        tools:text="5" />

</layout>