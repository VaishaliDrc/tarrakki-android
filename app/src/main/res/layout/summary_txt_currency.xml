<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>

        <variable
            name="goalSummary"
            type="com.tarrakki.module.yourgoal.GoalSummary" />

        <variable
            name="onAction"
            type="android.widget.TextView.OnEditorActionListener" />
    </data>

    <LinearLayout
        android:id="@+id/llContainer"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/shape_rectangle_gray"
        android:gravity="center_vertical"
        android:orientation="horizontal"
        android:padding="@dimen/space_4">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/space_4"
            android:layout_marginEnd="@dimen/space_4"
            android:text="@string/rs_symbol"
            android:textAppearance="@style/TextAppearance.AppCompat.Small"
            android:textColor="@color/semi_black" />

        <EditText
            android:id="@+id/edtInvestAmount"
            onEditorAction="@{onAction}"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="@dimen/space_4"
            android:background="@null"
            android:imeOptions="actionDone"
            android:inputType="number"
            android:minWidth="@dimen/_72sdp"
            android:text="@={goalSummary.value}"
            android:textAppearance="@style/TextAppearance.AppCompat.Small"
            android:textColor="@color/semi_black"
            app:isPositiveCurrency="@{true}"
            tools:hint="10,00,000" />

    </LinearLayout>
</layout>