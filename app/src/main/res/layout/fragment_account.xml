<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>

        <variable
            name="vm"
            type="com.tarrakki.module.account.AccountVM" />
    </data>

    <android.support.v4.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:fillViewport="true"
        tools:context=".module.account.AccountFragment">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/default_space"
            android:orientation="vertical">

            <LinearLayout
                android:id="@+id/ll_complete_verification"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="@dimen/default_space"
                android:background="@drawable/bg_complete_verification"
                android:elevation="2dp"
                android:orientation="horizontal"
                android:padding="@dimen/space_16">

                <android.support.v7.widget.CardView
                    android:layout_width="60dp"
                    android:layout_height="60dp"
                    android:elevation="12dp"
                    app:cardBackgroundColor="@color/circular_bg"
                    app:cardCornerRadius="30dp"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent">

                    <ImageView
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:adjustViewBounds="true"
                        android:padding="@dimen/space_12"
                        android:src="@drawable/ic_complete_verification"
                        tools:src="@drawable/ic_complete_verification" />

                </android.support.v7.widget.CardView>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="@dimen/space_16"
                    android:orientation="vertical">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/lato_semibold"
                        android:text="Complete Registration"
                        android:textAppearance="@style/TextAppearance.AppCompat.Medium"
                        android:textColor="@color/white" />

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/space_4"
                        android:fontFamily="@font/lato_semibold"
                        android:text="Hi there! register your KYC and bank account to start investing today."
                        android:textAppearance="@style/TextAppearance.AppCompat.Caption"
                        android:textColor="@color/white" />

                    <LinearLayout
                        android:layout_marginTop="@dimen/space_12"
                        android:orientation="horizontal"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">

                        <EditText
                            android:layout_weight="0.7"
                            android:id="@+id/edtPanNo"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:background="@drawable/shape_edt_verifcation"
                            android:hint="Enter your PAN"
                            android:inputType="textCapCharacters"
                            android:maxLines="1"
                            android:imeOptions="actionDone"
                            android:paddingStart="@dimen/space_8"
                            android:gravity="center_vertical"
                            android:layout_gravity="center_vertical"
                            android:paddingTop="@dimen/space_8"
                            android:paddingEnd="@dimen/space_8"
                            android:paddingBottom="@dimen/space_8"
                            android:textAppearance="@style/TextAppearance.AppCompat.Caption"
                            android:textColor="@color/black"/>

                        <TextView
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="0.3"
                            android:text="Next"
                            android:paddingTop="@dimen/space_8"
                            android:paddingEnd="@dimen/space_8"
                            android:paddingBottom="@dimen/space_8"
                            android:paddingStart="@dimen/space_8"
                            android:gravity="center"
                            android:layout_gravity="center"
                            android:textColor="@color/white"
                            android:textAppearance="@style/TextAppearance.AppCompat.Caption"
                            android:background="@drawable/shape_btn_verification" />

                    </LinearLayout>

                </LinearLayout>

            </LinearLayout>

            <android.support.constraint.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/shape_cart_view"
                android:elevation="@dimen/space_2"
                android:padding="@dimen/space_8">

                <ImageView
                    android:id="@+id/ivLogo"
                    android:layout_width="32dp"
                    android:layout_height="32dp"
                    android:background="@drawable/ic_app_lock"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent" />

                <TextView
                    android:id="@+id/tvTitle"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="@dimen/space_8"
                    android:layout_marginEnd="@dimen/space_8"
                    android:text="@string/app_lock_touch_id"
                    android:textColor="@color/black"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintEnd_toStartOf="@+id/switchOnOff"
                    app:layout_constraintStart_toEndOf="@+id/ivLogo"
                    app:layout_constraintTop_toTopOf="parent" />

                <ToggleButton
                    android:id="@+id/switchOnOff"
                    android:layout_width="64dp"
                    android:layout_height="24dp"
                    android:background="@drawable/shape_switch_bg"
                    android:button="@null"
                    android:checked="@={vm.appLock}"
                    android:textOff=""
                    android:textOn=""
                    app:layout_constraintBaseline_toBaselineOf="@+id/tvTitle"
                    app:layout_constraintEnd_toEndOf="parent"
                    tools:checked="true" />

            </android.support.constraint.ConstraintLayout>

            <android.support.constraint.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/default_space"
                android:background="@drawable/shape_cart_view"
                android:elevation="@dimen/space_2"
                android:padding="@dimen/space_8"
                android:visibility="@{vm.logoutVisibility}">

                <ImageView
                    android:id="@+id/ivBankAccount"
                    android:layout_width="32dp"
                    android:layout_height="32dp"
                    android:src="@drawable/ic_bank_account"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent" />

                <TextView
                    android:id="@+id/tvBankAccount"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="@dimen/space_8"
                    android:drawableEnd="@drawable/ic_keyboard_arrow_right_dark_gray"
                    android:text="@string/bank_accounts"
                    android:textColor="@color/black"
                    app:layout_constraintBottom_toBottomOf="@+id/ivBankAccount"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toEndOf="@+id/ivBankAccount"
                    app:layout_constraintTop_toTopOf="@+id/ivBankAccount"
                    tools:text="@string/bank_accounts" />

                <View
                    android:id="@+id/mDivider"
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:layout_marginTop="@dimen/space_8"
                    android:background="@color/lighter_gray"
                    app:layout_constraintBottom_toTopOf="@+id/ivBankMandateAccount"
                    app:layout_constraintTop_toBottomOf="@+id/ivBankAccount" />


                <ImageView
                    android:id="@+id/ivBankMandateAccount"
                    android:layout_width="32dp"
                    android:layout_height="32dp"
                    android:layout_marginTop="@dimen/space_8"
                    android:src="@drawable/ic_bank_mandate"
                    app:layout_constraintTop_toBottomOf="@id/mDivider" />

                <TextView
                    android:id="@+id/tvBankMandateAccount"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="@dimen/space_8"
                    android:drawableEnd="@drawable/ic_keyboard_arrow_right_dark_gray"
                    android:text="@string/bank_mandate"
                    android:textColor="@color/black"
                    app:layout_constraintBottom_toBottomOf="@+id/ivBankMandateAccount"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toEndOf="@+id/ivBankMandateAccount"
                    app:layout_constraintTop_toTopOf="@+id/ivBankMandateAccount"
                    tools:text="@string/bank_mandate" />

            </android.support.constraint.ConstraintLayout>

            <FrameLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/default_space"
                android:background="@drawable/shape_cart_view"
                android:elevation="@dimen/space_2"
                android:paddingStart="@dimen/space_8"
                android:paddingEnd="@dimen/space_8">

                <android.support.v7.widget.RecyclerView
                    android:id="@+id/rvMenus"
                    dividerV="@{null}"
                    enableNestedScrollView="@{false}"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    app:layoutManager="android.support.v7.widget.LinearLayoutManager"
                    tools:itemCount="6"
                    tools:listitem="@layout/row_account_menu_item" />

            </FrameLayout>

            <android.support.constraint.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/default_space"
                android:background="@drawable/shape_cart_view"
                android:elevation="@dimen/space_2"
                android:padding="@dimen/space_8">

                <ImageView
                    android:id="@+id/ivLogoInvite"
                    android:layout_width="32dp"
                    android:layout_height="32dp"
                    android:src="@drawable/ic_invite_friends"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent" />

                <TextView
                    android:id="@+id/tvInvite"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="@dimen/space_8"
                    android:layout_marginEnd="@dimen/space_8"
                    android:text="@string/invite_your_friends"
                    android:textColor="@color/black"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toEndOf="@+id/ivLogoInvite"
                    app:layout_constraintTop_toTopOf="parent" />

            </android.support.constraint.ConstraintLayout>

            <Button
                android:id="@+id/btnLogout"
                android:layout_width="125dp"
                android:layout_height="40dp"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="@dimen/default_space"
                android:background="@drawable/shape_btn_idle_bg"
                android:fontFamily="@font/lato_bold"
                android:text="@string/logout"
                android:textAllCaps="true"
                android:textColor="@color/white"
                android:visibility="@{vm.logoutVisibility}" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="@dimen/default_space"
                android:text="V.0.1.5" />

        </LinearLayout>

    </android.support.v4.widget.NestedScrollView>
</layout>