<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/layout2">

    <data>

        <import type="android.view.View" />

        <variable
            name="vm"
            type="com.tarrakki.module.support.chat.ChatVM" />
    </data>

    <android.support.constraint.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        tools:context=".module.support.chat.ChatFragment">

        <TextView
            android:id="@+id/tvRefNo"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:fontFamily="@font/lato_bold"
            android:padding="@dimen/default_space"
            android:text="@{@string/query_ref_no_+` `+vm.reference}"
            android:textColor="@color/black"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            tools:text="Query Ref No : 123456789" />

        <View
            android:id="@+id/mDivider"
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@color/dark"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/tvRefNo" />

        <RelativeLayout
            android:id="@+id/frmRV"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            app:layout_constraintBottom_toTopOf="@+id/mDivider1"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/mDivider">

            <android.support.v7.widget.RecyclerView
                android:id="@+id/rvChat"
                dividerV="@{@drawable/shape_transferant_divider_16dp}"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:clipToPadding="false"
                android:paddingTop="@dimen/default_space"
                android:paddingBottom="@dimen/default_space"
                app:layoutManager="android.support.v7.widget.LinearLayoutManager"
                app:reverseLayout="true"
                app:stackFromEnd="false"
                tools:itemCount="5"
                tools:listitem="@layout/row_sender_message" />

        </RelativeLayout>

        <View
            android:id="@+id/mDivider1"
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@color/dark"
            android:visibility="@{vm.btnSendVisibility?View.VISIBLE:View.GONE}"
            app:layout_constraintBottom_toTopOf="@+id/edtMessage"
            app:layout_constraintStart_toStartOf="parent" />

        <View
            android:id="@+id/view"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:background="@color/white"
            android:visibility="@{vm.btnSendVisibility?View.VISIBLE:View.GONE}"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintTop_toBottomOf="@id/mDivider1" />

        <View
            android:layout_width="1dp"
            android:layout_height="0dp"
            android:background="@color/dark"
            android:visibility="@{vm.btnSendVisibility?View.VISIBLE:View.GONE}"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toStartOf="@id/ivSend"
            app:layout_constraintStart_toEndOf="@id/ivGallery"
            app:layout_constraintTop_toBottomOf="@id/mDivider1" />

        <EditText
            android:id="@+id/edtMessage"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:background="@color/white"
            android:hint="@string/write_your_reply_here"
            android:inputType="textMultiLine"
            android:maxLines="5"
            android:padding="@dimen/_8sdp"
            android:visibility="@{vm.btnSendVisibility?View.VISIBLE:View.GONE}"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toStartOf="@+id/openFile"
            app:layout_constraintStart_toStartOf="parent" />

        <ImageView
            android:id="@+id/openFile"
            android:layout_width="@dimen/_32sdp"
            android:layout_height="@dimen/_32sdp"
            android:padding="@dimen/_6sdp"
            android:rotation="60"
            android:src="@drawable/ic_file_attachment"
            android:visibility="@{vm.btnSendVisibility?vm.btnAttahcmentVisibility:View.GONE}"
            app:layout_constraintBottom_toBottomOf="@id/edtMessage"
            app:layout_constraintEnd_toStartOf="@id/ivGallery"
            app:layout_constraintTop_toTopOf="@id/ivGallery"
            tools:visibility="visible" />

        <ImageView
            android:id="@+id/ivGallery"
            android:layout_width="@dimen/_32sdp"
            android:layout_height="@dimen/_32sdp"
            android:layout_marginEnd="1dp"
            android:padding="@dimen/_6sdp"
            android:src="@drawable/ic_camera_black"
            android:visibility="@{vm.btnSendVisibility?vm.btnAttahcmentVisibility:View.GONE}"
            app:layout_constraintBottom_toBottomOf="@id/edtMessage"
            app:layout_constraintEnd_toStartOf="@id/ivSend"
            app:layout_constraintTop_toTopOf="@id/ivSend" />

        <ImageView
            android:id="@+id/ivSend"
            android:layout_width="@dimen/_32sdp"
            android:layout_height="@dimen/_32sdp"
            android:padding="@dimen/_6sdp"
            android:src="@drawable/ic_send_msg"
            android:visibility="@{vm.btnSendVisibility?View.VISIBLE:View.GONE}"
            app:layout_constraintBottom_toBottomOf="@id/edtMessage"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="@+id/view"
            app:layout_constraintVertical_bias="1" />

    </android.support.constraint.ConstraintLayout>
</layout>
