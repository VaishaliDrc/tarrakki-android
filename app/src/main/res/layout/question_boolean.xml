<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>

        <variable
            name="question"
            type="com.tarrakki.api.model.Goal.Data.GoalData.Question" />

        <variable
            name="onToggleClick"
            type="android.view.View.OnClickListener" />
    </data>

    <android.support.constraint.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/tvGoalValueL"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/default_space"
            android:fontFamily="@font/lato_semibold"
            android:gravity="center"
            android:text="@{question.question}"
            android:textAppearance="@style/TextAppearance.AppCompat.Small"
            android:textColor="@color/semi_black"
            app:layout_constraintTop_toTopOf="parent"
            tools:text="@string/current_value_of_your_dream_home" />

        <ToggleButton
            android:id="@+id/switchHasHomeLoan"
            android:layout_width="96dp"
            android:layout_height="38dp"
            android:layout_marginTop="@dimen/default_space"
            android:background="@drawable/shape_switch_bg"
            android:button="@null"
            android:checked="@={question.ansBoolean}"
            android:onClick="@{onToggleClick}"
            android:textOff=""
            android:textOn=""
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/tvGoalValueL"
            tools:checked="true" />

        <net.cachapa.expandablelayout.ExpandableLayout
            android:id="@+id/expandableLayout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:el_expanded="true"
            app:el_duration="0"
            app:expanded="@{question.ansBoolean}"
            app:layout_constraintTop_toBottomOf="@+id/switchHasHomeLoan"
            tools:el_expanded="true" />

    </android.support.constraint.ConstraintLayout>
</layout>
