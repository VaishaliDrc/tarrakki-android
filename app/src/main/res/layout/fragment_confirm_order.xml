<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>

        <variable
            name="vm"
            type="com.tarrakki.module.confirmorder.ConfirmOrderVM" />
    </data>
    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/rvOrders"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:clipToPadding="false"
            android:paddingTop="@dimen/default_space"
            app:dividerV="@{@drawable/shape_transferant_divider_16dp}"
            app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager"
            tools:context=".module.confirmorder.ConfirmOrderFragment"
            tools:listitem="@layout/row_confirm_order" />


        <ImageView
            android:id="@+id/ivConfirmOrderblur"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:src="@drawable/blur_confirm_order"
            android:scaleType="fitXY"
            android:visibility="gone"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            tools:visibility="visible"/>


    </androidx.constraintlayout.widget.ConstraintLayout>



</layout>