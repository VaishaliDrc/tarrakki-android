                    </TableLayout>

                </HorizontalScrollView>

            </androidx.constraintlayout.widget.ConstraintLayout>

            <LinearLayout
                android:paddingBottom="@dimen/_5sdp"
                android:id="@+id/ll_options"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/space_12"
                android:orientation="horizontal"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/lyt_multi_folio_value">


                <TextView
                    android:id="@+id/tvAddPortfolio"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginEnd="@dimen/space_12"
                    android:drawableStart="@drawable/ic_add_small_new"
                    android:drawablePadding="@dimen/space_4"
                    android:gravity="center"
                    android:text="@string/add"
                    android:textColor="@color/colorAccent"
                    android:textSize="@dimen/_9sdp" />

                <TextView
                    android:id="@+id/tvRedeem"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginEnd="@dimen/space_12"
                    android:drawableStart="@drawable/ic_redeem_new"
                    android:drawablePadding="@dimen/space_4"
                    android:gravity="center"
                    android:text="@string/redeem"
                    android:textColor="@color/colorAccent"
                    android:textSize="@dimen/_9sdp" />

                <TextView
                    android:id="@+id/tvStopPortfolio"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginEnd="@dimen/space_8"
                    android:drawableStart="@drawable/ic_stop"
                    android:drawablePadding="@dimen/space_4"
                    android:gravity="center"
                    android:text="@string/stop"
                    android:textColor="@color/colorAccent"
                    android:textSize="@dimen/_9sdp"
                    android:visibility="gone" />

                <TextView
                    android:id="@+id/tvApplyForDebitCart"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:drawableStart="@drawable/ic_portfolio_debit_card_new"
                    android:drawablePadding="@dimen/space_4"
                    android:gravity="center"
                    android:text="@string/apply_for_debit_cart"
                    android:textColor="@color/colorAccent"
                    android:textSize="@dimen/_9sdp"
                    android:visibility="@{investment.applyForDebitCartBtnVisibility}"
                    app:applyForDebitCart="@{investment.folioData}"
                    tools:text="Apply for Debit Card" />

            </LinearLayout>

        </androidx.constraintlayout.widget.ConstraintLayout>

    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>