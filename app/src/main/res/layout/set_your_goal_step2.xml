<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>

        <variable
            name="yourGoal"
            type="com.tarrakki.module.yourgoal.YourGoalSteps" />

        <variable
            name="goal"
            type="com.tarrakki.module.goal.Goal" />

    </data>

    <android.support.v4.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:fillViewport="true"
        tools:context=".module.yourgoal.YourGoalFragment">

        <android.support.constraint.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/default_space"
            android:background="@drawable/shape_cart_view"
            android:elevation="@dimen/space_2"
            android:padding="@dimen/space_8">

            <View
                android:id="@+id/mStepLine"
                android:layout_width="match_parent"
                android:layout_height="@dimen/space_8"
                android:layout_marginTop="@dimen/default_space"
                android:background="@drawable/shape_double_line"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <ImageView
                android:id="@+id/ivStep1"
                android:layout_width="32dp"
                android:layout_height="32dp"
                android:background="@color/white"
                app:imgUrl="@{yourGoal.drawable1}"
                app:layout_constraintBottom_toBottomOf="@id/mStepLine"
                app:layout_constraintStart_toStartOf="@id/mStepLine"
                app:layout_constraintTop_toTopOf="@id/mStepLine"
                tools:src="@drawable/shape_step_bg" />

            <ImageView
                android:id="@+id/ivStep2"
                android:layout_width="32dp"
                android:layout_height="32dp"
                android:background="@color/white"
                app:imgUrl="@{yourGoal.drawable2}"
                app:layout_constraintBottom_toBottomOf="@id/mStepLine"
                app:layout_constraintEnd_toEndOf="@id/mStepLine"
                app:layout_constraintStart_toStartOf="@id/mStepLine"
                app:layout_constraintTop_toTopOf="@id/mStepLine"
                tools:src="@drawable/shape_step_bg" />


            <ImageView
                android:id="@+id/ivStep3"
                android:layout_width="32dp"
                android:layout_height="32dp"
                android:background="@color/white"
                app:imgUrl="@{yourGoal.drawable3}"
                app:layout_constraintBottom_toBottomOf="@id/mStepLine"
                app:layout_constraintEnd_toEndOf="@id/mStepLine"
                app:layout_constraintTop_toTopOf="@id/mStepLine"
                tools:src="@drawable/shape_step_bg" />

            <android.support.v7.widget.CardView
                android:id="@+id/view2"
                android:layout_width="144dp"
                android:layout_height="144dp"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="@dimen/default_space"
                android:elevation="12dp"
                app:cardBackgroundColor="@color/circular_bg"
                app:cardCornerRadius="72dp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/ivStep2">

                <ImageView
                    android:id="@+id/imageView1"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:paddingStart="@dimen/space_8"
                    android:paddingEnd="@dimen/space_8"
                    android:paddingBottom="@dimen/space_40"
                    app:imgUrl="@{goal.imgUrl}"
                    tools:src="@drawable/own_a_home" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="bottom"
                    android:layout_marginBottom="@dimen/space_30"
                    android:gravity="center"
                    android:maxLines="2"
                    android:minLines="2"
                    android:paddingStart="@dimen/space_5"
                    android:paddingEnd="@dimen/space_5"
                    android:text="@{goal.title}"
                    android:textAllCaps="true"
                    android:textColor="@color/semi_black"
                    android:textSize="@dimen/sp10"
                    tools:text="Children's Education" />

            </android.support.v7.widget.CardView>

            <TextView
                android:id="@+id/tvGoalValueL"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/space_32"
                android:fontFamily="@font/lato_semibold"
                android:gravity="center"
                android:text="@{yourGoal.question}"
                android:textAppearance="@style/TextAppearance.AppCompat.Small"
                android:textColor="@color/semi_black"
                app:layout_constraintTop_toBottomOf="@+id/view2"
                tools:text="@string/current_value_of_your_dream_home" />

            <ToggleButton
                android:id="@+id/switchHasHomeLoan"
                android:layout_width="96dp"
                android:layout_height="38dp"
                android:layout_marginTop="@dimen/default_space"
                android:background="@drawable/shape_switch_bg"
                android:button="@null"
                android:checked="@={yourGoal.selected}"
                android:textOff=""
                android:textOn=""
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/tvGoalValueL"
                tools:checked="false" />

            <net.cachapa.expandablelayout.ExpandableLayout
                android:id="@+id/expandableLayout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:el_duration="500"
                app:el_expanded="true"
                app:expanded="@{yourGoal.selected}"
                app:layout_constraintTop_toBottomOf="@+id/switchHasHomeLoan">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/space_30"
                    android:gravity="center_horizontal"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/tvGoalDurationL"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/lato_semibold"
                        android:gravity="center"
                        android:text="@{yourGoal.question2}"
                        android:textAppearance="@style/TextAppearance.AppCompat.Small"
                        android:textColor="@color/semi_black"
                        app:layout_constraintTop_toBottomOf="@+id/switchHasHomeLoan"
                        tools:text="@string/down_payment" />

                    <RelativeLayout
                        android:id="@+id/llContainer2"
                        android:layout_width="100dp"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/default_space"
                        android:background="@drawable/shape_rounded_gray"
                        android:gravity="center_vertical"
                        android:orientation="horizontal"
                        android:padding="@dimen/space_8"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toBottomOf="@+id/tvGoalDurationL">

                        <EditText
                            android:id="@+id/edtDurations"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_alignParentStart="true"
                            android:layout_marginStart="@dimen/space_8"
                            android:layout_marginEnd="@dimen/space_8"
                            android:layout_toStartOf="@+id/tvDurations"
                            android:background="@null"
                            android:inputType="number"
                            android:maxLength="2"
                            android:text="@={yourGoal.answered2}"
                            android:textAppearance="@style/TextAppearance.AppCompat.Small"
                            android:textColor="@color/semi_black"
                            app:isPositiveCurrency="@{true}" />

                        <TextView
                            android:id="@+id/tvDurations"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_alignParentEnd="true"
                            android:layout_marginStart="@dimen/space_8"
                            android:layout_marginEnd="@dimen/space_8"
                            android:fontFamily="@font/lato_semibold"
                            android:text="%"
                            android:textAppearance="@style/TextAppearance.AppCompat.Small"
                            android:textColor="@color/semi_black" />


                    </RelativeLayout>

                </LinearLayout>
            </net.cachapa.expandablelayout.ExpandableLayout>

            <Button
                android:id="@+id/btnPrevious"
                android:layout_width="124dp"
                android:layout_height="40dp"
                android:layout_marginTop="@dimen/space_32"
                android:layout_marginEnd="@dimen/space_8"
                android:layout_marginBottom="@dimen/space_8"
                android:background="@drawable/shape_btn_idle_bg"
                android:drawableStart="@drawable/ic_arrow_previous"
                android:drawablePadding="@dimen/space_8"
                android:fontFamily="@font/lato_semibold"
                android:gravity="center"
                android:onClick="@{yourGoal.onPrevious}"
                android:paddingStart="20dp"
                android:paddingEnd="24dp"
                android:text="@string/previous"
                android:textAllCaps="false"
                android:textAppearance="@style/TextAppearance.AppCompat.Small"
                android:textColor="@color/white"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toStartOf="@+id/guideline4"
                app:layout_constraintTop_toBottomOf="@id/expandableLayout"
                app:layout_constraintVertical_bias="1" />

            <Button
                android:id="@+id/btnNext"
                android:layout_width="124dp"
                android:layout_height="38dp"
                android:layout_marginStart="@dimen/space_8"
                android:layout_marginTop="@dimen/space_32"
                android:layout_marginBottom="@dimen/space_8"
                android:background="@drawable/shape_btn_idle_bg"
                android:drawableEnd="@drawable/ic_arrow_next_white"
                android:fontFamily="@font/lato_semibold"
                android:gravity="center"
                android:onClick="@{yourGoal.onNext}"
                android:paddingStart="38dp"
                android:paddingEnd="28dp"
                android:text="@string/next"
                android:textAllCaps="false"
                android:textAppearance="@style/TextAppearance.AppCompat.Small"
                android:textColor="@color/white"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintStart_toStartOf="@+id/guideline4"
                app:layout_constraintTop_toBottomOf="@id/expandableLayout"
                app:layout_constraintVertical_bias="1" />

            <android.support.constraint.Guideline
                android:id="@+id/guideline4"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                app:layout_constraintGuide_percent="0.5" />

        </android.support.constraint.ConstraintLayout>

    </android.support.v4.widget.NestedScrollView>

</layout>