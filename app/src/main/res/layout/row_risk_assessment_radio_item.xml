<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>

        <import type="android.view.View" />

        <variable
            name="item"
            type="com.tarrakki.api.model.RiskAssessmentQuestionsApiResponse.Data.Option" />
    </data>

    <RelativeLayout
        android:layout_marginBottom="@dimen/space_16"
        android:background="@{item.isSelected?@drawable/shape_rounded_bg_green:@drawable/shape_border_rounded_black}"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:background="@{item.isSelected?@drawable/shape_bottom_radius_green:@drawable/shape_bottom_radius_black}"
            android:layout_alignParentStart="true"
            android:padding="4dp"
            android:gravity="center"
            android:layout_alignParentTop="true"
            android:text="A"
            android:textAppearance="@style/TextAppearance.AppCompat.Body1"
            android:layout_width="26dp"
            android:layout_height="wrap_content"/>

        <TextView
            android:paddingEnd="16dp"
            android:paddingBottom="16dp"
            android:paddingTop="16dp"
            android:paddingStart="38dp"
            android:id="@+id/tvTitle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:elevation="2dp"
            android:gravity="center"
            android:text="@{item.optionValue}"
            android:textAppearance="@style/TextAppearance.AppCompat.Small"
            android:textColor="@{item.isSelected?@color/white:@color/semi_black}"
            tools:text="15000 - 30000"
            tools:textColor="@color/black" />

    </RelativeLayout>

</layout>