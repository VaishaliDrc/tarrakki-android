<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>

        <variable
            name="option1Key"
            type="String" />

        <variable
            name="option1Value"
            type="String" />

        <variable
            name="option2Key"
            type="String" />

        <variable
            name="option2Value"
            type="String" />

        <variable
            name="option3Key"
            type="String" />

        <variable
            name="option3Value"
            type="String" />

        <variable
            name="optionTitle"
            type="String" />

        <import type="android.view.View" />

        <variable
            name="item"
            type="com.tarrakki.api.model.RiskAssessmentQuestionsApiResponse.Data.Option" />
    </data>

    <RelativeLayout
        android:background="@{item.isSelected?@drawable/shape_rounded_bg_green:@drawable/shape_border_rounded_black}"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:background="@{item.isSelected?@drawable/shape_bottom_radius_green:@drawable/shape_bottom_radius_black}"
            android:layout_alignParentStart="true"
            android:padding="4dp"
            android:gravity="center"
            android:layout_alignParentTop="true"
            android:text="@{optionTitle}"
            android:textAppearance="@style/TextAppearance.AppCompat.Body1"
            android:layout_width="26dp"
            android:layout_height="wrap_content"/>

        <LinearLayout
            android:paddingEnd="16dp"
            android:paddingBottom="8dp"
            android:paddingTop="8dp"
            android:paddingStart="28dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <LinearLayout
                android:layout_weight="1"
                android:padding="8dp"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <TextView
                    android:background="@{item.isSelected?@drawable/circular_bg_gray_border:@drawable/circular_bg_gray}"
                    android:gravity="center"
                    android:layout_gravity="center"
                    android:layout_width="50dp"
                    android:layout_height="50dp"
                    android:elevation="2dp"
                    tools:background="@drawable/circular_bg_gray"
                    android:text="@{option1Key}"
                    android:textAppearance="@style/TextAppearance.AppCompat.Caption"
                    android:textColor="@{!item.isSelected?@color/white:@color/semi_black}"
                    tools:text="100%"
                    tools:textColor="@color/black" />

                <TextView
                    android:layout_gravity="center_horizontal"
                    android:gravity="center_horizontal"
                    android:layout_marginTop="6dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:elevation="2dp"
                    android:lines="2"
                    android:maxLines="2"
                    android:text="@{option1Value}"
                    android:textAppearance="@style/TextAppearance.AppCompat.Caption"
                    android:textColor="@{item.isSelected?@color/white:@color/semi_black}"
                    tools:text="Return"
                    tools:textColor="@color/black" />


            </LinearLayout>

            <LinearLayout
                android:layout_weight="1"
                android:padding="8dp"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <TextView
                    android:background="@{item.isSelected?@drawable/circular_bg_accent_border:@drawable/circular_bg_accent}"
                    android:gravity="center"
                    android:layout_gravity="center"
                    android:layout_width="50dp"
                    android:layout_height="50dp"
                    android:elevation="2dp"
                    tools:background="@drawable/circular_bg_gray"
                    android:text="@{option2Key}"
                    android:textAppearance="@style/TextAppearance.AppCompat.Caption"
                    android:textColor="@{!item.isSelected?@color/white:@color/colorAccent}"
                    tools:text="100%"
                    tools:textColor="@color/black" />

                <TextView
                    android:layout_marginTop="6dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:elevation="2dp"
                    android:lines="2"
                    android:layout_gravity="center_horizontal"
                    android:gravity="center_horizontal"
                    android:maxLines="2"
                    android:text="@{option2Value}"
                    android:textAppearance="@style/TextAppearance.AppCompat.Caption"
                    android:textColor="@{item.isSelected?@color/white:@color/semi_black}"
                    tools:text="Return"
                    tools:textColor="@color/black" />

            </LinearLayout>

            <LinearLayout
                android:layout_weight="1"
                android:padding="8dp"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <TextView
                    android:background="@{item.isSelected?@drawable/circular_bg_red_border:@drawable/circular_bg_red}"
                    android:gravity="center"
                    android:layout_gravity="center"
                    android:layout_width="50dp"
                    android:layout_height="50dp"
                    android:elevation="2dp"
                    tools:background="@drawable/circular_bg_gray"
                    android:text="@{option3Key}"
                    android:textAppearance="@style/TextAppearance.AppCompat.Caption"
                    android:textColor="@{!item.isSelected?@color/white:@color/red}"
                    tools:text="100%"
                    tools:textColor="@color/black" />

                <TextView
                    android:layout_gravity="center_horizontal"
                    android:gravity="center_horizontal"
                    android:layout_marginTop="6dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:elevation="2dp"
                    android:lines="2"
                    android:maxLines="2"
                    android:text="@{option3Value}"
                    android:textAppearance="@style/TextAppearance.AppCompat.Caption"
                    android:textColor="@{item.isSelected?@color/white:@color/semi_black}"
                    tools:text="Return"
                    tools:textColor="@color/black" />


            </LinearLayout>

        </LinearLayout>

    </RelativeLayout>

</layout>