<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>

        <variable
            name="isEnd"
            type="Boolean" />

        <import type="android.view.View" />

        <variable
            name="item"
            type="com.tarrakki.api.model.RiskAssessmentQuestionsApiResponse.Data.Option" />
    </data>

    <RelativeLayout
        android:gravity="center_horizontal"
        android:layoutDirection="@{isEnd?View.LAYOUT_DIRECTION_RTL:View.LAYOUT_DIRECTION_LTR}"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <LinearLayout
            android:id="@+id/lyttitle"
            android:layout_marginEnd="@dimen/_8sdp"
            android:paddingTop="@dimen/_8sdp"
            android:paddingBottom="@dimen/_8sdp"
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_alignParentStart="true"
            android:layout_toStartOf="@id/lytData"
            android:layout_height="wrap_content">

            <TextView
                android:id="@+id/tvTitle"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@{item.isSelected?@drawable/slider_selected_bg:@drawable/slider_unselected_bg}"
                android:elevation="4dp"
                android:gravity="center"
                android:paddingStart="@dimen/_16sdp"
                android:paddingTop="@dimen/_8sdp"
                android:paddingEnd="@dimen/_16sdp"
                android:paddingBottom="@dimen/_8sdp"
                android:text="@{item.optionValue}"
                android:textAppearance="@style/TextAppearance.AppCompat.Caption"
                android:textColor="@{item.isSelected?@color/white:@color/semi_black}"
                tools:background="@drawable/dr_btn_payment_bg"
                tools:text="15000 - 30000"
                tools:textColor="@color/white" />
        </LinearLayout>

        <androidx.appcompat.widget.LinearLayoutCompat
            android:id="@+id/lytData"
            android:layout_alignTop="@id/lyttitle"
            android:layout_alignBottom="@id/lyttitle"
            android:layout_alignParentEnd="true"
            android:orientation="horizontal"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

            <RelativeLayout
                android:layout_gravity="center_vertical"
                android:gravity="center_vertical"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">

                <View
                    android:layout_centerVertical="true"
                    tools:visibility="visible"
                    android:layout_width="@dimen/_12sdp"
                    android:layout_height="2dp"
                    android:background="@color/darker_gray"/>

                <ImageView
                    android:layout_centerVertical="true"
                    tools:visibility="visible"
                    android:layout_width="@dimen/_12sdp"
                    android:layout_height="wrap_content"
                    android:adjustViewBounds="true"
                    android:rotation="@{isEnd?180:0}"
                    android:src="@drawable/ic_thumb"
                    android:visibility="@{item.isSelected?View.VISIBLE:View.GONE}"/>

            </RelativeLayout>

            <RelativeLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">

                <LinearLayout
                    android:visibility="@{item.isMovedOver? View.VISIBLE:View.GONE}"
                    android:orientation="vertical"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent">

                    <View
                        android:layout_weight="1.5"
                        android:layout_width="2dp"
                        android:layout_height="0dp"
                        android:background="@color/color_light_violet"
                        tools:background="@color/color_light_violet" />

                    <View
                        android:layout_width="2dp"
                        android:layout_height="0dp"
                        android:background="@color/color_light_violet"
                        android:layout_weight="1"/>

                </LinearLayout>

                <LinearLayout
                    android:visibility="@{item.isSelected? View.VISIBLE:View.GONE}"
                    android:orientation="vertical"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent">

                    <View
                        android:layout_weight="1.5"
                        android:layout_width="2dp"
                        android:layout_height="0dp"
                        android:background="@color/color_light_violet"
                        tools:background="@color/color_light_violet" />

                    <View
                        android:layout_width="2dp"
                        android:layout_height="0dp"
                        android:background="@color/darker_gray"
                        android:layout_weight="1"/>

                </LinearLayout>

                <LinearLayout
                    android:visibility="@{item.isSelected &amp;&amp; item.isMovedOver ? View.VISIBLE:View.GONE}"
                    android:orientation="vertical"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent">

                    <View
                        android:layout_weight="1.5"
                        android:layout_width="2dp"
                        android:layout_height="0dp"
                        android:background="@color/color_light_violet"
                        tools:background="@color/color_light_violet" />

                    <View
                        android:layout_width="2dp"
                        android:layout_height="0dp"
                        android:background="@color/color_light_violet"
                        android:layout_weight="1"/>

                </LinearLayout>

                <LinearLayout
                    android:visibility="@{!item.isSelected &amp;&amp; !item.isMovedOver ? View.VISIBLE:View.GONE}"
                    android:orientation="vertical"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent">

                    <View
                        android:layout_weight="1.5"
                        android:id="@+id/mDividerV"
                        android:layout_width="2dp"
                        android:layout_height="0dp"
                        android:background="@color/darker_gray"
                        tools:background="@color/color_light_violet" />

                    <View
                        android:layout_width="2dp"
                        android:layout_height="0dp"
                        android:background="@color/darker_gray"
                        android:layout_weight="1"/>

                </LinearLayout>

            </RelativeLayout>


        </androidx.appcompat.widget.LinearLayoutCompat>

    </RelativeLayout>

</layout>