<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>

        <import type="android.view.View" />

        <variable
            name="vm"
            type="com.tarrakki.module.prime_investor.PrimeInvestorMutualFundListRatingVM" />

    </data>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:background="@color/bg_color"
        android:orientation="vertical"
        android:paddingBottom="@dimen/_8sdp">

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:src="@drawable/bg_tarrakki_pro"
            android:scaleType="fitXY"
            android:visibility="@{vm.isTarrakkiPro() ? View.GONE : View.VISIBLE}"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            tools:visibility="visible"/>

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/rvScheme"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_marginBottom="@dimen/_12sdp"
            android:nestedScrollingEnabled="false"
            android:paddingStart="@dimen/_12ssp"
            android:visibility="@{vm.isTarrakkiPro() ? View.VISIBLE : View.GONE}"
            android:paddingEnd="@dimen/_12ssp"
            app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager"
            app:layout_constraintBottom_toTopOf="@id/ivPrimeInvestor"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            tools:listitem="@layout/row_prime_investor_mutual_fund_list_rating"
            tools:visibility="gone"/>

        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/txtTerms"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/lato_regular"
            android:paddingStart="@dimen/_12ssp"
            android:text="@string/terms_and_condditions"
            android:textColor="#48194A"
            android:textSize="@dimen/_10ssp"
            android:visibility="@{vm.isTarrakkiPro() ? View.VISIBLE : View.GONE}"
            app:layout_constraintBottom_toBottomOf="@id/ivPrimeInvestor"
            app:layout_constraintEnd_toStartOf="@id/ivPrimeInvestor"
            app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="@+id/ivPrimeInvestor"
            tools:visibility="gone"/>

        <ImageView
            android:id="@+id/ivPrimeInvestor"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="@dimen/_12sdp"
            android:layout_marginBottom="@dimen/_5sdp"
            android:visibility="@{vm.isTarrakkiPro() ? View.VISIBLE : View.GONE}"
            android:src="@drawable/ic_powered_by_primeinvestor"
            app:layout_constraintBottom_toTopOf="@+id/txtDisclaimer"
            app:layout_constraintEnd_toEndOf="parent"
            tools:visibility="gone"/>


        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/txtDisclaimer"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:fontFamily="@font/lato_regular"
            android:paddingStart="@dimen/_12ssp"
            android:paddingEnd="@dimen/_12ssp"
            android:visibility="@{vm.isTarrakkiPro() ? View.VISIBLE : View.GONE}"
            android:text="@string/prime_investor_disclaimer"
            android:textColor="#999999"
            android:textSize="@dimen/_8ssp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            tools:visibility="gone"/>


    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>