<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>

        <variable
            name="isSelected"
            type="Boolean" />

        <import type="android.view.View" />

        <variable
            name="widget"
            type="com.tarrakki.api.model.UserBankMandateResponse.Data" />
    </data>

    <android.support.constraint.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/default_space"
        android:layout_marginEnd="@dimen/default_space"
        android:background="@drawable/shape_cart_view"
        android:elevation="@dimen/space_2"
        android:padding="@dimen/space_8"
        tools:layout_marginBottom="@dimen/space_16">

        <ImageView
            android:id="@+id/ivBank"
            imgUrl="@{widget.bankDetails.bankLogo}"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:src="@drawable/temp_icici"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/tvName"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/space_8"
            android:layout_marginEnd="8dp"
            android:fontFamily="@font/lato_semibold"
            android:maxLines="1"
            android:text="@{widget.bankDetails.bankName}"
            android:textAppearance="@style/TextAppearance.AppCompat.Caption"
            android:textColor="@color/item_selected_color"
            app:layout_constraintBottom_toBottomOf="@id/ivBank"
            app:layout_constraintEnd_toStartOf="@+id/tvPending"
            app:layout_constraintStart_toEndOf="@id/ivBank"
            app:layout_constraintTop_toTopOf="@id/ivBank"
            tools:text="ICICI Bank" />

        <TextView
            android:id="@+id/tvPending"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="8dp"
            android:maxLines="2"
            android:paddingStart="@dimen/space_20"
            android:paddingTop="@dimen/space_4"
            android:paddingEnd="@dimen/space_20"
            android:paddingBottom="@dimen/space_4"
            android:text="@{widget.actualStatus}"
            android:textAppearance="@style/TextAppearance.AppCompat.Caption"
            android:textColor="@color/white"
            app:layout_constraintBottom_toBottomOf="@id/ivBank"
            app:layout_constraintEnd_toStartOf="@+id/tvDefault"
            app:layout_constraintTop_toTopOf="@id/ivBank"
            tools:text="dfjhf" />

        <RadioButton
            android:id="@+id/tvDefault"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:checked="@{isSelected}"
            android:clickable="false"
            android:textColor="@color/white"
            android:textSize="@dimen/sp10"
            android:visibility="gone"
            app:layout_constraintBottom_toBottomOf="@id/ivBank"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="1.0"
            app:layout_constraintStart_toEndOf="@id/ivBank"
            app:layout_constraintTop_toTopOf="@id/ivBank" />

        <View
            android:id="@+id/mDivider"
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_marginTop="@dimen/space_8"
            android:background="@color/darker_gray"
            app:layout_constraintTop_toBottomOf="@+id/ivBank" />

        <LinearLayout
            android:id="@+id/ll_bank_mandate"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/mDivider">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="0.4"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/tvAccountNoL"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/space_8"
                        android:text="@string/account_number"
                        android:textAppearance="@style/TextAppearance.AppCompat.Caption" />

                    <TextView
                        android:id="@+id/tvAccountNo"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/lato_semibold"
                        android:text="@{widget.bankDetails.accountNumber}"
                        android:textAppearance="@style/TextAppearance.AppCompat.Caption"
                        android:textColor="@color/semi_black"
                        tools:text="1210000091052" />

                </LinearLayout>

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="0.6"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/tvBreachNameL"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/space_8"
                        android:text="@string/breach_name"
                        android:textAppearance="@style/TextAppearance.AppCompat.Caption" />

                    <TextView
                        android:id="@+id/tvBreachName"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/lato_semibold"
                        android:text="@{widget.bankDetails.branchName}"
                        android:textAppearance="@style/TextAppearance.AppCompat.Caption"
                        android:textColor="@color/semi_black"
                        tools:text="Ahmedabad" />

                </LinearLayout>

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="0.4"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/tvIFSCCodeLabel"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/space_8"
                        android:text="@string/ifsc_code"
                        android:textAppearance="@style/TextAppearance.AppCompat.Caption"
                        app:layout_constraintEnd_toEndOf="parent" />

                    <TextView
                        android:id="@+id/tvIFSCCode"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/lato_semibold"
                        android:minWidth="80dp"
                        android:text="@{widget.bankDetails.ifscCode}"
                        android:textAppearance="@style/TextAppearance.AppCompat.Caption"
                        android:textColor="@color/semi_black"
                        tools:text="IC1C00000457" />

                </LinearLayout>

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="0.6"
                    android:orientation="vertical">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/space_8"
                        android:text="@string/bank_mandate_type"
                        android:textAppearance="@style/TextAppearance.AppCompat.Caption" />

                    <TextView
                        android:id="@+id/tvMandateType"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/lato_semibold"
                        android:minWidth="80dp"
                        android:text="@{widget.type}"
                        android:textAppearance="@style/TextAppearance.AppCompat.Caption"
                        android:textColor="@color/semi_black"
                        tools:text="IC1C00000457" />

                </LinearLayout>

            </LinearLayout>

            <LinearLayout
                android:id="@+id/llAmount"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/_8sdp"
                android:orientation="vertical">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/mandate_amount"
                    android:textAppearance="@style/TextAppearance.AppCompat.Caption" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/lato_semibold"
                    android:textAppearance="@style/TextAppearance.AppCompat.Caption"
                    android:textColor="@color/semi_black"
                    app:price="@{widget.amount}"
                    tools:text="@string/dummy1" />

            </LinearLayout>

        </LinearLayout>

        <android.support.constraint.Guideline
            android:id="@+id/gdlCenter"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            app:layout_constraintGuide_percent="0.40" />

        <View
            android:id="@+id/mDivider2"
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_marginTop="@dimen/space_8"
            android:background="@color/darker_gray"
            app:layout_constraintTop_toBottomOf="@+id/ll_bank_mandate" />

        <TextView
            android:id="@+id/tvInfo"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/space_8"
            android:layout_marginEnd="8dp"
            android:text="@{widget.info}"
            android:textAppearance="@style/TextAppearance.AppCompat.Caption"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toStartOf="@+id/btnUploadSanned"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="@id/mDivider2"
            app:layout_constraintVertical_bias="0.0" />

        <TextView
            android:id="@+id/btnUploadSanned"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/space_8"
            android:layout_marginBottom="@dimen/space_1"
            android:background="@drawable/shape_btn_primary"
            android:drawableStart="@drawable/ic_mandate_upload"
            android:drawablePadding="@dimen/space_8"
            android:fontFamily="@font/lato_bold"
            android:gravity="center"
            android:paddingStart="@dimen/space_16"
            android:paddingTop="@dimen/space_8"
            android:paddingEnd="@dimen/space_16"
            android:paddingBottom="@dimen/space_8"
            android:text="@{widget.btnUploadTxt}"
            android:textAppearance="@style/TextAppearance.AppCompat.Caption"
            android:textColor="@color/white"
            android:visibility="@{widget.btnUploadVisibility}"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="@id/mDivider2"
            tools:text="@string/complete_nach_mandate"
            tools:visibility="@{widget.isMandateUpload==false?View.VISIBLE:View.GONE}" />

    </android.support.constraint.ConstraintLayout>

</layout>