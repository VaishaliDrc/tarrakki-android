<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <data>

        <variable
            name="folio"
            type="String" />

        <variable
            name="startDate"
            type="String" />

        <variable
            name="amount"
            type="String" />

        <variable
            name="isSingleFolio"
            type="Boolean"/>

        <import type="android.view.View"/>

    </data>

    <android.support.constraint.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/default_space"
        android:layout_marginEnd="@dimen/default_space"
        android:background="@drawable/shape_cart_view_16dp"
        android:padding="@dimen/default_space">

        <TextView
            android:id="@+id/tvInvestmentL"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/lato_semibold"
            android:text="@string/stop_sip"
            android:textColor="@color/black"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <ImageView
            android:id="@+id/tvClose"
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:src="@drawable/ic_close_black_24dp"
            android:tint="@color/dark"
            app:layout_constraintBottom_toBottomOf="@id/tvInvestmentL"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="@id/tvInvestmentL" />

        <TextView
            android:id="@+id/tvChooseFolio"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/default_space"
            android:text="@string/choose_folio"
            android:textAllCaps="true"
            android:visibility="@{isSingleFolio?View.GONE:View.VISIBLE}"
            android:textAppearance="@style/TextAppearance.AppCompat.Caption"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/tvInvestmentL" />

        <TextView
            android:id="@+id/edtChooseFolio"
            android:layout_width="match_parent"
            android:layout_height="36dp"
            android:layout_marginTop="@dimen/space_4"
            android:layout_marginEnd="@dimen/space_4"
            android:background="@drawable/shape_edt_gray_round"
            android:completionThreshold="1"
            android:drawableEnd="@drawable/ic_drop_down_dark_gray_24dp"
            android:hint="@string/choose_folio"
            android:maxLines="1"
            android:visibility="@{isSingleFolio?View.GONE:View.VISIBLE}"
            android:paddingStart="@dimen/default_space"
            android:drawableStart="@drawable/ic_folio_number"
            android:drawablePadding="@dimen/space_8"
            android:paddingTop="@dimen/space_8"
            android:paddingEnd="@dimen/default_space"
            android:paddingBottom="@dimen/space_8"
            android:text="@{folio}"
            android:textAppearance="@style/TextAppearance.AppCompat.Small"
            android:textColor="@color/black"
            android:textColorHint="@color/darker_gray"
            app:layout_constraintHorizontal_weight="1"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/tvChooseFolio" />

        <TextView
            android:id="@+id/tvSelectStartDate"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/default_space"
            android:text="@string/select_startdate"
            android:textAllCaps="true"
            android:textAppearance="@style/TextAppearance.AppCompat.Caption"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/edtChooseFolio" />

        <TextView
            android:id="@+id/edtStartDate"
            android:layout_width="match_parent"
            android:layout_height="36dp"
            android:layout_marginTop="@dimen/space_4"
            android:layout_marginEnd="@dimen/space_4"
            android:background="@drawable/shape_edt_gray_round"
            android:completionThreshold="1"
            android:drawableEnd="@drawable/ic_drop_down_dark_gray_24dp"
            android:hint="@string/select_startdate"
            android:maxLines="1"
            android:drawableStart="@drawable/ic_calendar"
            android:drawablePadding="@dimen/space_8"
            android:paddingStart="@dimen/default_space"
            android:paddingTop="@dimen/space_8"
            android:paddingEnd="@dimen/default_space"
            android:paddingBottom="@dimen/space_8"
            android:text="@{startDate}"
            android:textAppearance="@style/TextAppearance.AppCompat.Small"
            android:textColor="@color/black"
            android:textColorHint="@color/darker_gray"
            app:layout_constraintHorizontal_weight="1"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/tvSelectStartDate" />

        <TextView
            android:id="@+id/tvAmount"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/default_space"
            android:text="@string/amount"
            android:textAllCaps="true"
            android:textAppearance="@style/TextAppearance.AppCompat.Caption"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/edtStartDate" />

        <TextView
            android:id="@+id/tvRSInvestedAmount"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/default_space"
            android:text="@string/rs_symbol"
            android:textColor="@color/darker_gray"
            app:layout_constraintBottom_toBottomOf="@id/edtAmount"
            app:layout_constraintStart_toStartOf="@id/edtAmount"
            app:layout_constraintTop_toTopOf="@id/edtAmount" />

        <EditText
            android:id="@+id/edtAmount"
            android:layout_width="match_parent"
            android:layout_height="36dp"
            android:layout_marginTop="@dimen/space_4"
            android:layout_marginEnd="@dimen/space_4"
            android:background="@drawable/shape_edt_gray_round"
            android:hint="@string/amount"
            android:maxLines="1"
            android:paddingStart="@dimen/space_30"
            android:paddingTop="@dimen/space_8"
            android:paddingEnd="@dimen/default_space"
            android:paddingBottom="@dimen/space_8"
            android:editable="false"
            android:focusable="false"
            android:focusableInTouchMode="false"
            android:text="@={amount}"
            android:textAppearance="@style/TextAppearance.AppCompat.Small"
            android:textColor="@color/black"
            android:textColorHint="@color/darker_gray"
            app:layout_constraintHorizontal_weight="1"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/tvAmount" />

        <Button
            android:layout_marginTop="@dimen/space_16"
            android:id="@+id/btnInvest"
            android:layout_width="match_parent"
            android:layout_height="@dimen/_36sdp"
            android:layout_marginBottom="@dimen/space_4"
            android:background="@drawable/shape_btn_idle_bg"
            android:fontFamily="@font/lato_semibold"
            android:paddingStart="24dp"
            android:paddingEnd="24dp"
            android:text="@string/stop"
            android:textColor="@color/white"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintTop_toBottomOf="@id/edtAmount"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent" />

    </android.support.constraint.ConstraintLayout>
</layout>