<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>

        <import type="android.view.View" />

        <variable
            name="vm"
            type="com.tarrakki.module.home.HomeVM" />

    </data>

    <androidx.swiperefreshlayout.widget.SwipeRefreshLayout
        android:id="@+id/mRefresh"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

        <androidx.core.widget.NestedScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:fillViewport="true"
            tools:context=".module.home.HomeFragment">

            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <ImageView
                    android:id="@+id/homeView"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:adjustViewBounds="true"
                    android:background="@color/colorPrimary"
                    android:src="@drawable/home_top_bg"
                    android:visibility="@{vm.portfolioVisibility}"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent"
                    tools:ignore="ContentDescription" />

                <com.mikhaellopez.circularprogressbar.CircularProgressBar
                    android:id="@+id/cpPortfolio"
                    returnpercentage="@{vm.portfolioDetails.totalReturnPercentage}"
                    android:layout_width="@dimen/_140sdp"
                    android:layout_height="@dimen/_140sdp"
                    android:visibility="@{vm.portfolioVisibility}"
                    app:cpb_progressbar_width="8dp"
                    app:layout_constraintBottom_toBottomOf="@+id/homeView"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintHorizontal_bias="0.1"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent" />

                <!--<TextView
                    android:id="@+id/tvPortfolio"
                    android:layout_width="136dp"
                    android:layout_height="15dp"
                    android:gravity="center"
                    android:minWidth="140dp"
                    android:text="@string/portfolio_value"
                    android:textAppearance="@style/TextAppearance.AppCompat.Caption"
                    android:textColor="@color/home_title_color"
                    android:visibility="gone"
                    app:layout_constraintBottom_toBottomOf="@+id/homeView"
                    app:layout_constraintEnd_toEndOf="@+id/cpPortfolio"
                    app:layout_constraintStart_toStartOf="@+id/cpPortfolio"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintVertical_bias="0.3"
                    tools:visibility="@{vm.portfolioVisibility}" />-->

                <!--<TextView
                    android:id="@+id/tvPortfolioValue"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="16dp"
                    android:layout_marginEnd="16dp"
                    android:fontFamily="@font/lato_bold"
                    android:gravity="center"
                    android:textAppearance="@style/TextAppearance.AppCompat.Small"
                    android:textColor="@android:color/white"
                    android:visibility="gone"
                    app:anim="@{true}"
                    app:layout_constraintBottom_toBottomOf="@+id/homeView"
                    app:layout_constraintEnd_toEndOf="@+id/cpPortfolio"
                    app:layout_constraintStart_toStartOf="@+id/cpPortfolio"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintVertical_bias="0.45"
                    app:price="@{vm.portfolioDetails.currentValue}"
                    tools:text="@string/dummy1"
                    tools:visibility="@{vm.portfolioVisibility}" />-->

                <TextView
                    android:id="@+id/tvViewPortfolio"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@drawable/shape_green_round_bg"
                    android:gravity="center"
                    android:padding="8dp"
                    android:text="@string/view_portfolio"
                    android:textAppearance="@style/TextAppearance.AppCompat.Caption"
                    android:textColor="@color/colorAccent"
                    android:visibility="@{vm.portfolioVisibility}"
                    app:layout_constraintBottom_toBottomOf="@id/cpPortfolio"
                    app:layout_constraintEnd_toEndOf="@id/cpPortfolio"
                    app:layout_constraintStart_toStartOf="@id/cpPortfolio"
                    app:layout_constraintTop_toTopOf="@id/cpPortfolio" />

                <androidx.constraintlayout.widget.Guideline
                    android:id="@+id/guideline"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    app:layout_constraintGuide_percent="0.55" />

                <TextView
                    android:id="@+id/tvTotalInvestment"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:text="@string/total_investment"
                    android:textAppearance="@style/TextAppearance.AppCompat.Caption"
                    android:textColor="@color/home_title_color"
                    android:visibility="@{vm.portfolioVisibility}"
                    app:layout_constraintBottom_toBottomOf="@+id/homeView"
                    app:layout_constraintStart_toEndOf="@id/guideline"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintVertical_bias="0.1" />

                <TextView
                    android:id="@+id/tvTotalInvestmentValue"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:textAppearance="@style/TextAppearance.AppCompat.Medium"
                    android:textColor="@android:color/white"
                    android:visibility="@{vm.portfolioVisibility}"
                    app:layout_constraintStart_toEndOf="@id/guideline"
                    app:layout_constraintTop_toBottomOf="@+id/tvTotalInvestment"
                    app:price="@{vm.portfolioDetails.totalInvestment}"
                    tools:text="@string/dummy1" />

                <TextView
                    android:id="@+id/tvTotalReturn"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:text="@string/current_value"
                    android:textAppearance="@style/TextAppearance.AppCompat.Caption"
                    android:textColor="@color/home_title_color"
                    android:visibility="@{vm.portfolioVisibility}"
                    app:layout_constraintBottom_toBottomOf="@+id/homeView"
                    app:layout_constraintStart_toEndOf="@id/guideline"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintVertical_bias="0.55" />

                <TextView
                    android:id="@+id/tvTotalReturnValue"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/lato_semibold"
                    android:gravity="center"
                    android:textAppearance="@style/TextAppearance.AppCompat.Medium"
                    android:textColor="@color/white"
                    android:visibility="@{vm.portfolioVisibility}"
                    app:anim="@{true}"
                    app:layout_constraintStart_toEndOf="@id/guideline"
                    app:layout_constraintTop_toBottomOf="@+id/tvTotalReturn"
                    app:price="@{vm.portfolioDetails.currentValue}"
                    tools:text="@string/dummy1" />

                <LinearLayout
                    android:id="@+id/ll_complete_verification"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="@dimen/default_space"
                    android:layout_marginTop="@dimen/default_space"
                    android:layout_marginEnd="@dimen/default_space"
                    android:background="@drawable/bg_pan_verification"
                    android:elevation="2dp"
                    android:orientation="horizontal"
                    android:padding="@dimen/space_16"
                    android:visibility="visible"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/homeView">

                    <androidx.cardview.widget.CardView
                        android:layout_width="60dp"
                        android:layout_height="60dp"
                        android:elevation="12dp"
                        app:cardBackgroundColor="@color/circular_bg"
                        app:cardCornerRadius="30dp"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintStart_toStartOf="parent">

                        <ImageView
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:adjustViewBounds="true"
                            android:padding="@dimen/space_12"
                            android:src="@drawable/ic_pan_verification"
                            tools:src="@drawable/ic_pan_verification" />

                    </androidx.cardview.widget.CardView>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="@dimen/space_16"
                        android:orientation="vertical">

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:fontFamily="@font/lato_semibold"
                            android:text="Find Out"
                            android:textAppearance="@style/TextAppearance.AppCompat.Caption"
                            android:textColor="@color/white" />

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="@dimen/space_4"
                            android:fontFamily="@font/lato_semibold"
                            android:text="If You Are Ready to Invest."
                            android:textAppearance="@style/TextAppearance.AppCompat.Small"
                            android:textColor="@color/white" />

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="@dimen/space_4"
                            android:text="It takes less than a minute."
                            android:textAppearance="@style/TextAppearance.AppCompat.Caption"
                            android:textColor="@color/white" />

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="@dimen/space_12"
                            android:orientation="horizontal">

                            <EditText
                                android:id="@+id/edtPanNo"
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_gravity="center_vertical"
                                android:layout_weight="0.62"
                                android:background="@drawable/shape_edt_verifcation"
                                android:gravity="center_vertical"
                                android:hint="Enter your PAN"
                                android:imeOptions="actionDone"
                                android:inputType="textCapCharacters"
                                android:maxLength="10"
                                android:maxLines="1"
                                android:paddingStart="@dimen/space_8"
                                android:paddingTop="@dimen/space_8"
                                android:paddingEnd="@dimen/space_8"
                                android:paddingBottom="@dimen/space_8"
                                android:textAppearance="@style/TextAppearance.AppCompat.Caption"
                                android:textColor="@color/black" />

                            <TextView
                                android:id="@+id/btnCheck"
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_gravity="center"
                                android:layout_weight="0.38"
                                android:background="@drawable/shape_btn_verification"
                                android:gravity="center"
                                android:paddingStart="@dimen/space_8"
                                android:paddingTop="@dimen/space_8"
                                android:paddingEnd="@dimen/space_8"
                                android:paddingBottom="@dimen/space_8"
                                android:singleLine="true"
                                android:text="Check Now"
                                android:textAppearance="@style/TextAppearance.AppCompat.Caption"
                                android:textColor="@color/white" />

                        </LinearLayout>

                    </LinearLayout>

                </LinearLayout>

                <LinearLayout
                    android:id="@+id/llWhyTarrakki"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="@dimen/default_space"
                    android:layout_marginTop="@dimen/default_space"
                    android:layout_marginEnd="@dimen/default_space"
                    android:background="@drawable/shape_cart_view"
                    android:elevation="2dp"
                    android:orientation="vertical"
                    android:padding="8dp"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/ll_complete_verification">

                    <TextView
                        android:id="@+id/tvWhyTarrakkii"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:drawableEnd="@{vm.whayTarrakki ? @drawable/ic_arrow_up : @drawable/ic_arrow_down}"
                        android:fontFamily="@font/lato_semibold"
                        android:text="@{vm.isTarrakki()?@string/why_tarrakki:@string/why_rural_invest}"
                        android:textColor="@android:color/black"
                        tools:drawableEnd="@drawable/ic_arrow_up"
                        tools:text="@string/why_rural_invest" />

                    <net.cachapa.expandablelayout.ExpandableLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        app:el_duration="500"
                        app:el_expanded="false"
                        app:expanded="@{vm.whayTarrakki}">

                        <TextView
                            android:id="@+id/tvWhyTarrakkiiReason"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="8dp"
                            android:text="@{vm.isTarrakki()?@string/why_tarrakki_info:@string/why_rural_invest_info}"
                            tools:text="@string/why_rural_invest_info" />

                    </net.cachapa.expandablelayout.ExpandableLayout>

                </LinearLayout>

                <androidx.constraintlayout.widget.ConstraintLayout
                    android:id="@+id/clTarrakkiZyaada"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="@dimen/default_space"
                    android:layout_marginTop="@dimen/default_space"
                    android:layout_marginEnd="@dimen/default_space"
                    android:background="@drawable/shape_cart_view"
                    android:elevation="@dimen/space_2"
                    android:orientation="vertical"
                    android:padding="8dp"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/llWhyTarrakki">

                    <ImageView
                        android:id="@+id/tvKeyBenefits"
                        android:layout_width="wrap_content"
                        android:layout_height="@dimen/_40sdp"
                        android:layout_marginBottom="@dimen/default_space"
                        android:adjustViewBounds="true"
                        android:src="@drawable/tarrakki_zyaada_logo"
                        app:layout_constraintBottom_toTopOf="@id/barrier2"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toTopOf="parent" />

                    <ImageView
                        android:id="@+id/ivTarrakkiZyaada"
                        android:layout_width="@dimen/_20sdp"
                        android:layout_height="@dimen/_20sdp"
                        android:background="@drawable/page_selected"
                        android:src="@drawable/ic_keyboard_arrow_right_dark_gray"
                        android:tint="@color/white"
                        app:layout_constraintBottom_toBottomOf="@id/tvKeyBenefits"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintTop_toTopOf="@id/tvKeyBenefits" />

                    <androidx.constraintlayout.widget.Barrier
                        android:id="@+id/barrier2"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        app:barrierDirection="bottom"
                        app:constraint_referenced_ids="tvKeyBenefits" />

                    <ImageView
                        android:id="@+id/ivB1"
                        android:layout_width="0dp"
                        android:layout_height="@dimen/_72sdp"
                        android:padding="@dimen/_8sdp"
                        android:src="@drawable/key_benefits_1"
                        app:layout_constraintEnd_toStartOf="@id/ivB2"
                        app:layout_constraintHorizontal_weight="3.25"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toBottomOf="@id/barrier2" />

                    <TextView
                        android:id="@+id/tvB1L"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/space_8"
                        android:gravity="center"
                        android:paddingEnd="8dp"
                        android:text="@string/higher_returns_than_your_bank"
                        android:textSize="@dimen/_9ssp"
                        app:layout_constraintEnd_toEndOf="@id/ivB1"
                        app:layout_constraintStart_toStartOf="@id/ivB1"
                        app:layout_constraintTop_toBottomOf="@id/ivB1" />

                    <ImageView
                        android:id="@+id/ivB2"
                        android:layout_width="0dp"
                        android:layout_height="@dimen/_72sdp"
                        android:layout_marginStart="@dimen/space_8"
                        android:layout_marginEnd="@dimen/space_8"
                        android:padding="@dimen/_8sdp"
                        android:src="@drawable/key_benefits_2"
                        app:layout_constraintEnd_toStartOf="@id/ivB3"
                        app:layout_constraintHorizontal_weight="3.5"
                        app:layout_constraintStart_toEndOf="@id/ivB1"
                        app:layout_constraintTop_toBottomOf="@id/barrier2" />

                    <TextView
                        android:id="@+id/tvB2L"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/space_8"
                        android:gravity="center"
                        android:text="@string/debit_card_powered_by_hdfc_bank_amp_visa_towards_your_investment"
                        android:textSize="@dimen/_9ssp"
                        app:layout_constraintEnd_toEndOf="@id/ivB2"
                        app:layout_constraintStart_toStartOf="@id/ivB2"
                        app:layout_constraintTop_toBottomOf="@id/ivB2" />

                    <View
                        android:layout_width="1dp"
                        android:layout_height="0dp"
                        android:layout_marginTop="@dimen/_4sdp"
                        android:background="@color/darker_gray"
                        app:layout_constraintBottom_toBottomOf="@id/tvB2L"
                        app:layout_constraintStart_toEndOf="@id/ivB1"
                        app:layout_constraintTop_toTopOf="@id/ivB2" />

                    <View
                        android:layout_width="1dp"
                        android:layout_height="0dp"
                        android:layout_marginTop="@dimen/_4sdp"
                        android:background="@color/darker_gray"
                        app:layout_constraintBottom_toBottomOf="@id/tvB2L"
                        app:layout_constraintEnd_toStartOf="@id/ivB3"
                        app:layout_constraintTop_toTopOf="@id/ivB2" />


                    <ImageView
                        android:id="@+id/ivB3"
                        android:layout_width="0dp"
                        android:layout_height="@dimen/_72sdp"
                        android:padding="@dimen/_8sdp"
                        android:src="@drawable/key_benefits_3"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintHorizontal_weight="3.25"
                        app:layout_constraintStart_toEndOf="@id/ivB2"
                        app:layout_constraintTop_toBottomOf="@id/barrier2" />

                    <TextView
                        android:id="@+id/tvB3L"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/space_8"
                        android:gravity="center"
                        android:paddingStart="8dp"
                        android:text="@string/instant_redemption_redemption"
                        android:textSize="@dimen/_9ssp"
                        app:layout_constraintEnd_toEndOf="@id/ivB3"
                        app:layout_constraintStart_toStartOf="@id/ivB3"
                        app:layout_constraintTop_toBottomOf="@id/ivB3" />


                </androidx.constraintlayout.widget.ConstraintLayout>

                <androidx.recyclerview.widget.RecyclerView
                    android:id="@+id/rvHomeItem"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:visibility="visible"
                    app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/clTarrakkiZyaada"
                    tools:listitem="@layout/row_section_investment_item" />

            </androidx.constraintlayout.widget.ConstraintLayout>


        </androidx.core.widget.NestedScrollView>

        <com.google.android.material.floatingactionbutton.FloatingActionButton
            android:id="@+id/btn_whatsapp"
            android:layout_width="wrap_content"
            android:src="@drawable/ic_whatsapp"
            android:layout_alignParentEnd="true"
            android:backgroundTint="#55CC6C"
            android:layout_alignParentBottom="true"
            app:maxImageSize="32dp"
            android:layout_margin="@dimen/_16sdp"
            android:layout_height="wrap_content"/>

        </RelativeLayout>

    </androidx.swiperefreshlayout.widget.SwipeRefreshLayout>
</layout>