        <TextView
            android:id="@+id/tvSIPAmount"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/space_8"
            android:background="@drawable/shape_edt_white_round"
            android:hint="@string/rs_symbol"
            android:minWidth="@dimen/_80sdp"
            android:padding="@dimen/space_8"
            android:text="@{fund.sipAmount}"
            android:textAppearance="@style/TextAppearance.AppCompat.Caption"
            android:textColor="@color/white"
            android:textColorHint="@color/white"
            app:layout_constraintBottom_toBottomOf="@+id/tvSIPLabel"
            app:layout_constraintStart_toEndOf="@id/tvSIPLabel"
            app:layout_constraintTop_toTopOf="@+id/tvSIPLabel" />

        <TextView
            android:id="@+id/tvDate"
            android:layout_width="wrap_content"
            android:layout_height="33dp"
            android:layout_marginStart="8dp"
            android:background="@{startDayDisable?@drawable/shape_edt_white_round:@drawable/shape_edt_gray_round}"
            android:drawableEnd="@{startDayDisable?@drawable/ic_drop_down_white_24dp:@drawable/ic_drop_down_dark_gray_24dp}"
            android:fontFamily="@font/lato_semibold"
            android:padding="@dimen/space_8"
            android:text="@{date}"
            android:textAppearance="@style/TextAppearance.AppCompat.Caption"
            android:textColor="@{startDayDisable?@color/white:@color/darker_gray}"
            app:layout_constraintBottom_toBottomOf="@+id/tvSIPAmount"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0"
            app:layout_constraintStart_toEndOf="@+id/tvSIPAmount"
            app:layout_constraintTop_toTopOf="@+id/tvSIPAmount"
            tools:text="07 Sep 2018" />

        <TextView
            android:id="@+id/tvAddOneTimeAmount"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/default_space"
            android:fontFamily="@font/lato_bold"
            android:text="@string/add_one_time_amount"
            android:textAppearance="@style/TextAppearance.AppCompat.Small"
            android:textColor="#F6C469"
            android:visibility="@{fund.hasOneTimeAmount ? View.GONE: View.VISIBLE}"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/tvSIPAmount"
            tools:visibility="invisible" />


        <TextView
            android:id="@+id/tvLumpsum"
            android:layout_width="wrap_content"
            android:layout_height="31dp"
            android:layout_marginTop="@dimen/default_space"
            android:background="@drawable/shape_fun_type_selected"
            android:fontFamily="@font/lato_semibold"
            android:gravity="center"
            android:paddingStart="@dimen/space_16"
            android:paddingTop="@dimen/space_8"
            android:paddingEnd="@dimen/space_16"
            android:paddingBottom="@dimen/space_8"
            android:text="@string/lumpsum_amount"
            android:textAppearance="@style/TextAppearance.AppCompat.Caption"
            android:textColor="@color/white"
            android:visibility="@{fund.hasOneTimeAmount ? View.VISIBLE: View.INVISIBLE}"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/tvSIPAmount"
            tools:visibility="visible" />

        <TextView
            android:id="@+id/tvLumpsumAmount"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/space_8"
            android:background="@drawable/shape_edt_white_round"
            android:hint="@string/rs_symbol"
            android:minWidth="@dimen/_80sdp"
            android:padding="@dimen/space_8"
            android:text="@{fund.lumpsumAmount}"
            android:textAppearance="@style/TextAppearance.AppCompat.Caption"
            android:textColor="@color/white"
            android:textColorHint="@color/white"
            android:visibility="@{fund.hasOneTimeAmount ? View.VISIBLE: View.INVISIBLE}"
            app:layout_constraintBottom_toBottomOf="@+id/tvLumpsum"
            app:layout_constraintStart_toEndOf="@id/tvLumpsum"
            app:layout_constraintTop_toTopOf="@+id/tvLumpsum" />

