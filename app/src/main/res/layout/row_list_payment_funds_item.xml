<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools">

    <data>

        <variable
            name="widget"
            type="com.tarrakki.api.model.ConfirmTransactionResponse.Data.Order" />

    </data>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/space_16"
        android:layout_marginBottom="@dimen/space_16"
        android:orientation="vertical">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:id="@+id/tvName"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginEnd="@dimen/space_8"
                android:layout_toStartOf="@id/tvStatus"
                android:text="@{widget.schemeName}"
                android:textAppearance="@style/TextAppearance.AppCompat.Small"
                android:textColor="@color/item_selected_color"
                tools:text="SBI Banking and Financial Services Growth Direct Plan" />

            <TextView
                android:id="@+id/tvStatus"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentEnd="true"
                android:drawableStart="@drawable/ic_succeeded"
                android:drawablePadding="@dimen/space_5"
                android:text="Succeeded"
                android:textAppearance="@style/TextAppearance.AppCompat.Small"
                android:textColor="@color/colorAccent" />

        </RelativeLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="0.4"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/tvSIPLabel"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/space_16"
                    android:background="@drawable/shape_edt_gray_round"
                    android:paddingStart="@dimen/space_16"
                    android:paddingTop="@dimen/space_6"
                    android:paddingEnd="@dimen/space_16"
                    android:paddingBottom="@dimen/space_6"
                    android:text="@{widget.title}"
                    android:textAllCaps="true"
                    android:textAppearance="@style/Base.TextAppearance.AppCompat.Caption"
                    tools:text="@string/sip" />

                <TextView
                    android:id="@+id/tvSIP"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/space_8"
                    android:fontFamily="@string/returns_sysmbol"
                    android:paddingStart="@dimen/space_4"
                    android:paddingEnd="@dimen/space_4"
                    android:text="@{widget.amount}"
                    android:textAllCaps="true"
                    android:textAppearance="@style/Base.TextAppearance.AppCompat.Caption"
                    android:textColor="@color/black"
                    tools:text="@string/dummy3" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="0.6"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/tvLumpsumLabel"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/space_16"
                    android:background="@drawable/shape_edt_gray_round"
                    android:paddingStart="@dimen/space_16"
                    android:paddingTop="@dimen/space_6"
                    android:paddingEnd="@dimen/space_16"
                    android:paddingBottom="@dimen/space_6"
                    android:text="@string/lumpsum"
                    android:textAllCaps="true"
                    android:textAppearance="@style/Base.TextAppearance.AppCompat.Caption"
                    android:visibility="@{widget.haveSIPAndLumpsum}" />

                <TextView
                    android:id="@+id/tvLumpsumAmount"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/space_8"
                    android:fontFamily="@string/returns_sysmbol"
                    android:paddingStart="@dimen/space_4"
                    android:paddingEnd="@dimen/space_4"
                    android:text="@{widget.lumpsumAmount}"
                    android:textAllCaps="true"
                    android:textAppearance="@style/Base.TextAppearance.AppCompat.Caption"
                    android:textColor="@color/black"
                    android:visibility="@{widget.haveSIPAndLumpsum}"
                    tools:text="@string/dummy3" />

            </LinearLayout>
        </LinearLayout>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/space_8"
            android:text="@{widget.sipStartMsg}"
            android:visibility="@{widget.sipFirstMsgVisibility}"
            android:textAppearance="@style/TextAppearance.AppCompat.Caption"
            tools:text="Your SIP will start on April 28, 2019"
            tools:visibility="visible" />

    </LinearLayout>

</layout>