<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>

        <variable
            name="ticket"
            type="com.tarrakki.module.support.Ticket" />
    </data>

    <android.support.constraint.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/shape_cart_view"
        android:elevation="2dp"
        tools:layout_margin="@dimen/default_space">

        <View
            android:id="@+id/mIndicator"
            android:layout_width="4dp"
            android:layout_height="0dp"
            android:background="@{ticket.open?@drawable/shape_transaction_completed:@drawable/shape_transaction_pending}"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            tools:background="@drawable/shape_transaction_pending" />

        <TextView
            android:id="@+id/tvQuery"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/_8sdp"
            android:fontFamily="@font/lato_bold"
            android:paddingBottom="@dimen/_8sdp"
            android:text="@{ticket.query}"
            android:textColor="@color/black"
            app:layout_constraintBaseline_toBaselineOf="@id/cbStatus"
            app:layout_constraintEnd_toStartOf="@id/cbStatus"
            app:layout_constraintStart_toEndOf="@id/mIndicator"
            app:layout_constraintTop_toTopOf="parent"
            tools:text="Others" />

        <CheckBox
            android:id="@+id/cbStatus"
            android:layout_width="@dimen/_60sdp"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/_8sdp"
            android:background="@drawable/selector_view_tickite_status_bg"
            android:button="@null"
            android:elevation="2dp"
            android:enabled="false"
            android:checked="@{ticket.open}"
            android:fontFamily="@font/lato_semibold"
            android:gravity="center"
            android:paddingStart="@dimen/_12sdp"
            android:paddingTop="@dimen/_4sdp"
            android:paddingEnd="@dimen/_12sdp"
            android:paddingBottom="@dimen/_4sdp"
            android:text="@{ticket.open?@string/open:@string/closed}"
            android:textColor="@color/white"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            tools:text="@string/closed" />

        <TextView
            android:id="@+id/tvRefNo"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/_8sdp"
            android:layout_marginEnd="@dimen/_8sdp"
            android:text="@{@string/query_ref_no_ + ` `+ ticket.referenceNo}"
            android:textColor="@color/colorPrimary"
            app:layout_constraintStart_toEndOf="@id/mIndicator"
            app:layout_constraintTop_toBottomOf="@id/tvQuery"
            tools:text="Query Ref No : 123456789" />

        <TextView
            android:id="@+id/tvDateL"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/_8sdp"
            android:layout_marginTop="@dimen/_20sdp"
            android:layout_marginEnd="@dimen/_8sdp"
            android:text="@string/date"
            android:textColor="@color/black"
            app:layout_constraintStart_toEndOf="@id/mIndicator"
            app:layout_constraintTop_toBottomOf="@id/tvRefNo" />

        <TextView
            android:id="@+id/tvDate"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/_8sdp"
            android:layout_marginEnd="@dimen/_8sdp"
            android:layout_marginBottom="@dimen/_8sdp"
            android:text="@{ticket.dateTime}"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toEndOf="@id/mIndicator"
            app:layout_constraintTop_toBottomOf="@id/tvDateL"
            tools:text="October 10, 2018 - 10:15 AM" />


    </android.support.constraint.ConstraintLayout>

</layout>