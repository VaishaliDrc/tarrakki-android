<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>

        <variable
            name="widget"
            type="com.tarrakki.module.bankmandate.BankMandateWay" />
    </data>

    <android.support.constraint.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/default_space"
        android:layout_marginEnd="@dimen/default_space"
        android:background="@drawable/shape_cart_view"
        android:elevation="@dimen/space_2"
        android:padding="@dimen/space_8"
        tools:layout_marginBottom="@dimen/default_space">

        <android.support.v7.widget.CardView
            android:id="@+id/view2"
            android:layout_width="64dp"
            android:layout_height="64dp"
            android:elevation="12dp"
            app:cardBackgroundColor="@color/circular_bg"
            app:cardCornerRadius="32dp"
            android:layout_marginStart="@dimen/space_3"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_goneMarginTop="@dimen/space_8">

            <ImageView
                android:id="@+id/ivProfile"
                imgUrl="@{widget.imgRes}"
                android:layout_gravity="center"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:padding="@dimen/default_space"
                tools:src="@drawable/ic_upload" />

        </android.support.v7.widget.CardView>

        <TextView
            android:id="@+id/tvTitle"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/space_8"
            android:layout_marginTop="@dimen/space_8"
            android:layout_marginEnd="8dp"
            android:fontFamily="@font/lato_semibold"
            android:text="@{widget.title}"
            android:textColor="@color/black"
            app:layout_constraintEnd_toStartOf="@+id/rbSelected"
            app:layout_constraintStart_toEndOf="@id/view2"
            app:layout_constraintTop_toTopOf="parent"
            tools:text="E - Mandate" />

        <RadioButton
            android:id="@+id/rbSelected"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:checked="@={widget.selected}"
            android:clickable="false"
            app:layout_constraintBaseline_toBaselineOf="@id/tvTitle"
            app:layout_constraintEnd_toEndOf="parent"
            tools:checked="true" />


        <TextView
            android:id="@+id/tvDescription"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/space_8"
            android:layout_marginTop="@dimen/space_8"
            android:layout_marginEnd="8dp"
            android:fontFamily="@font/lato_semibold"
            android:text="@{widget.description}"
            android:textAppearance="@style/TextAppearance.AppCompat.Caption"
            android:textColor="@color/dark"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toEndOf="@id/view2"
            app:layout_constraintTop_toBottomOf="@id/tvTitle"
            tools:text="E-Mandate is an Adhaar-based mandate which takes only 3 days for the approval. It has maximum mandate limit of 1,00,000. Choose the NACH Mandate option if your mobile number is not registered with your Adhaar card." />

    </android.support.constraint.ConstraintLayout>
</layout>