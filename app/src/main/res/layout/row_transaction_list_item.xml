<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>

        <variable
            name="transaction"
            type="com.tarrakki.module.transactions.Transactions" />
    </data>

    <android.support.constraint.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/default_space"
        android:layout_marginEnd="@dimen/default_space"
        android:background="@drawable/shape_cart_view"
        android:elevation="@dimen/space_2"
        android:paddingEnd="@dimen/space_8"
        tools:ignore="RtlSymmetry"
        tools:layout_marginBottom="@dimen/default_space">

        <View
            android:id="@+id/vIndicator"
            android:layout_width="4dp"
            android:layout_height="0dp"
            android:background="@{transaction.pending ? @drawable/shape_transaction_pending : @drawable/shape_transaction_completed}"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            android:layout_marginTop="@dimen/space_1"
            android:layout_marginBottom="@dimen/space_1"
            tools:background="@drawable/shape_transaction_completed" />

        <TextView
            android:id="@+id/tvName"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/space_8"
            android:layout_marginTop="@dimen/space_8"
            android:layout_marginEnd="4dp"
            android:fontFamily="@font/lato_semibold"
            android:maxLines="2"
            android:minLines="2"
            android:text="@{transaction.name}"
            android:textAppearance="@style/TextAppearance.AppCompat.Small"
            android:textColor="@color/item_selected_color"
            app:layout_constraintEnd_toStartOf="@+id/tvCurrent"
            app:layout_constraintStart_toEndOf="@id/vIndicator"
            app:layout_constraintTop_toTopOf="parent"
            tools:text="SBI Banking and Financial Services Growth Direct Plan" />

        <TextView
            android:id="@+id/tvAmountL"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/space_8"
            android:layout_marginBottom="@dimen/space_8"
            android:text="@string/amount"
            android:textSize="@dimen/sp10"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/tvCurrent"
            price="@{transaction.amount}"
            android:layout_width="wrap_content"
            android:layout_height="17dp"
            android:drawablePadding="@dimen/space_2"
            android:fontFamily="@font/lato_semibold"
            android:minWidth="36dp"
            android:textAppearance="@style/TextAppearance.AppCompat.Caption"
            android:textColor="@android:color/black"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/tvAmountL"
            tools:text="25,000" />

        <TextView
            android:id="@+id/tvTypeL"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/space_8"
            android:layout_marginTop="@dimen/default_space"
            android:text="@string/type_"
            android:textAppearance="@style/TextAppearance.AppCompat.Caption"
            android:textColor="@color/black"
            app:layout_constraintStart_toEndOf="@id/vIndicator"
            app:layout_constraintTop_toBottomOf="@id/tvName" />

        <TextView
            android:id="@+id/tvType"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/space_8"
            android:layout_marginTop="@dimen/default_space"
            android:text="@{transaction.type}"
            android:textAppearance="@style/TextAppearance.AppCompat.Caption"
            app:layout_constraintStart_toEndOf="@id/tvTypeL"
            app:layout_constraintTop_toBottomOf="@id/tvName"
            tools:text="PIP (SIP)" />

        <TextView
            android:id="@+id/tvModeL"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/default_space"
            android:text="@string/mode_"
            android:textAppearance="@style/TextAppearance.AppCompat.Caption"
            android:textColor="@color/black"
            app:layout_constraintStart_toEndOf="@+id/gdlCenter"
            app:layout_constraintTop_toBottomOf="@id/tvName" />

        <TextView
            android:id="@+id/tvMode"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/space_8"
            android:layout_marginTop="@dimen/default_space"
            android:text="@{transaction.mode}"
            android:textAppearance="@style/TextAppearance.AppCompat.Caption"
            app:layout_constraintStart_toEndOf="@id/tvModeL"
            app:layout_constraintTop_toBottomOf="@id/tvName"
            tools:text="Ex.Physical" />


        <View
            android:id="@+id/mDivider"
            android:layout_width="0dp"
            android:layout_height="1dp"
            android:layout_marginStart="@dimen/space_8"
            android:layout_marginTop="@dimen/default_space"
            android:background="@color/lighter_gray"
            app:layout_constraintStart_toEndOf="@id/vIndicator"
            app:layout_constraintTop_toBottomOf="@+id/tvTypeL" />


        <TextView
            android:id="@+id/tvDateL"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/space_8"
            android:layout_marginTop="@dimen/space_8"
            android:text="@string/date"
            android:textAppearance="@style/TextAppearance.AppCompat.Caption"
            android:textColor="@color/black"
            app:layout_constraintStart_toEndOf="@id/vIndicator"
            app:layout_constraintTop_toBottomOf="@id/mDivider" />

        <TextView
            android:id="@+id/tvDate"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/space_8"
            android:layout_marginBottom="@dimen/space_8"
            android:fontFamily="@font/lato_semibold"
            android:text="@{transaction.date}"
            android:textAppearance="@style/TextAppearance.AppCompat.Caption"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toEndOf="@id/vIndicator"
            app:layout_constraintTop_toBottomOf="@+id/tvDateL"
            tools:text="Oct 10, 2018 - 10:15 AM" />

        <TextView
            android:id="@+id/tvUnitsL"
            android:layout_width="wrap_content"
            android:layout_height="14dp"
            android:layout_marginTop="@dimen/space_8"
            android:text="@string/units"
            android:textAppearance="@style/TextAppearance.AppCompat.Caption"
            android:textColor="@color/black"
            app:layout_constraintStart_toStartOf="@+id/gdlCenter"
            app:layout_constraintTop_toBottomOf="@id/mDivider" />

        <TextView
            android:id="@+id/tvUnits"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/space_8"
            android:fontFamily="@font/lato_semibold"
            android:text="@{transaction.units +``}"
            android:textAppearance="@style/TextAppearance.AppCompat.Caption"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="@id/tvUnitsL"
            app:layout_constraintTop_toBottomOf="@+id/tvUnitsL"
            tools:text="100" />

        <TextView
            android:id="@+id/tvNAVL"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/space_8"
            android:text="@string/nav"
            android:textAppearance="@style/TextAppearance.AppCompat.Caption"
            android:textColor="@color/black"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.7"
            app:layout_constraintStart_toEndOf="@+id/tvUnitsL"
            app:layout_constraintTop_toBottomOf="@id/mDivider" />

        <TextView
            android:id="@+id/tvNAV"
            dprice="@{transaction.NAV}"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/space_8"
            android:fontFamily="@font/lato_semibold"
            android:textAppearance="@style/TextAppearance.AppCompat.Caption"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="@id/tvNAVL"
            app:layout_constraintTop_toBottomOf="@+id/tvNAVL"
            tools:text="\u20B925.00" />

        <android.support.constraint.Guideline
            android:id="@+id/gdlCenter"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            app:layout_constraintGuide_percent="0.50" />

    </android.support.constraint.ConstraintLayout>
</layout>