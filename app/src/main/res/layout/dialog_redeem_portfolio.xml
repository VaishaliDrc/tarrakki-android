<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>

        <variable
            name="folio"
            type="String" />

        <variable
            name="investmentAmount"
            type="String" />

        <variable
            name="amount"
            type="String" />

        <variable
            name="isSingleFolio"
            type="Boolean" />

        <variable
            name="isAmountRedeem"
            type="boolean" />

        <import type="android.view.View" />

    </data>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/default_space"
        android:layout_marginEnd="@dimen/default_space"
        android:background="@drawable/shape_cart_view_16dp"
        android:padding="@dimen/default_space">

        <TextView
            android:id="@+id/tvInvestmentL"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/lato_semibold"
            android:text="@string/redeem"
            android:textColor="@color/black"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <ImageView
            android:id="@+id/tvClose"
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:src="@drawable/ic_close_black_24dp"
            android:tint="@color/dark"
            app:layout_constraintBottom_toBottomOf="@id/tvInvestmentL"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="@id/tvInvestmentL" />

        <TextView
            android:id="@+id/tvChooseFolio"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/default_space"
            android:text="@string/choose_folio"
            android:textAllCaps="true"
            android:textAppearance="@style/TextAppearance.AppCompat.Caption"
            android:visibility="@{isSingleFolio?View.GONE:View.VISIBLE}"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/tvInvestmentL" />

        <TextView
            android:id="@+id/edtChooseFolio"
            android:layout_width="match_parent"
            android:layout_height="36dp"
            android:layout_marginTop="@dimen/space_4"
            android:layout_marginEnd="@dimen/space_4"
            android:background="@drawable/shape_edt_gray_round"
            android:completionThreshold="1"
            android:drawableEnd="@drawable/ic_drop_down_dark_gray_24dp"
            android:drawablePadding="@dimen/space_8"
            android:hint="@string/choose_folio"
            android:maxLines="1"
            android:paddingStart="@dimen/default_space"
            android:paddingTop="@dimen/space_8"
            android:paddingEnd="@dimen/default_space"
            android:paddingBottom="@dimen/space_8"
            android:text="@={folio}"
            android:textAppearance="@style/TextAppearance.AppCompat.Small"
            android:textColor="@color/black"
            android:textColorHint="@color/darker_gray"
            android:visibility="@{isSingleFolio?View.GONE:View.VISIBLE}"
            app:layout_constraintHorizontal_weight="1"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/tvChooseFolio" />


        <TextView
            android:id="@+id/tvCertificate"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="@dimen/space_8"
            android:text="Would you like to redeem by? Unit/Amount"
            android:textAllCaps="true"
            android:layout_marginTop="@dimen/default_space"
            android:textAppearance="@style/TextAppearance.AppCompat.Caption"
            app:layout_constraintTop_toBottomOf="@+id/edtChooseFolio"
            app:layout_constraintStart_toStartOf="parent"/>

        <ToggleButton
            android:visibility="gone"
            android:id="@+id/switchOnOff"
            android:layout_width="64dp"
            android:layout_height="24dp"
            android:layout_marginTop="@dimen/default_space"
            android:background="@drawable/shape_switch_bg"
            android:button="@null"
            android:checked="@{isAmountRedeem}"
            android:enabled="true"
            android:textOff=""
            android:textOn=""
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toBottomOf="@id/edtChooseFolio"
            tools:checked="false" />


        <RadioGroup
            android:layout_marginTop="@dimen/_4sdp"
            android:id="@+id/rgTicketType"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/shape_edt_gray_round"
            android:elevation="2dp"
            android:orientation="horizontal"
            android:weightSum="2"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/tvCertificate">

            <RadioButton
                android:id="@+id/rbUnits"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:background="@drawable/redeem_amount_bg_selector"
                android:button="@null"
                android:checked="true"
                android:gravity="center"
                android:padding="@dimen/_8sdp"
                android:text="Unit"
                android:textColor="@color/view_redeem_selector" />

            <RadioButton
                android:id="@+id/rbAmount"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:background="@drawable/redeem_amount_bg_selector"
                android:button="@null"
                android:gravity="center"
                android:padding="@dimen/_8sdp"
                android:text="Amount"
                android:textColor="@color/view_redeem_selector" />

        </RadioGroup>


        <TextView
            android:id="@+id/tvLumpsum"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/default_space"
            android:text="@{isAmountRedeem?@string/total_redeemable_amount:@string/total_units}"
            android:textAllCaps="true"
            android:textAppearance="@style/TextAppearance.AppCompat.Caption"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/rgTicketType"
            tools:text="@string/total_units" />

        <EditText
            android:id="@+id/edtTotalInvestedAmount"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/space_4"
            android:background="@drawable/shape_edt_disable_gray_round"
            android:focusable="false"
            android:maxLines="1"
            android:nextFocusForward="@+id/edtSIPAmount"
            android:paddingStart="@dimen/space_30"
            android:paddingTop="@dimen/space_8"
            android:paddingEnd="@dimen/default_space"
            android:paddingBottom="@dimen/space_8"
            android:text="@={investmentAmount}"
            android:textAppearance="@style/TextAppearance.AppCompat.Small"
            android:textColor="@color/darker_gray"
            android:textColorHint="@color/darker_gray"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/tvLumpsum" />

        <TextView
            android:id="@+id/tvRSInvestedAmount"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/default_space"
            android:text="@string/rs_symbol"
            android:textColor="@color/darker_gray"
            android:visibility="@{isAmountRedeem?View.VISIBLE:View.GONE}"
            app:layout_constraintBottom_toBottomOf="@id/edtTotalInvestedAmount"
            app:layout_constraintStart_toStartOf="@id/edtTotalInvestedAmount"
            app:layout_constraintTop_toTopOf="@id/edtTotalInvestedAmount"
            tools:visibility="gone" />

        <TextView
            android:id="@+id/tvAmountL"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/default_space"
            android:text="@{isAmountRedeem?@string/amount_to_redeem:@string/units_to_redeem}"
            android:textAllCaps="true"
            android:textAppearance="@style/TextAppearance.AppCompat.Caption"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/edtTotalInvestedAmount"
            tools:text="@string/units_to_redeem" />

        <CheckBox
            android:id="@+id/chkAmount"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/space_8"
            android:button="@drawable/checkbox_redeem_folio"
            android:gravity="center_vertical"
            android:padding="8dp"
            android:text="@{isAmountRedeem?@string/withdraw_full_amount:@string/withdraw_all_units}"
            android:textAppearance="@style/Base.TextAppearance.AppCompat.Caption"
            android:textColor="@color/darker_gray"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toBottomOf="@id/tvAmountL"
            tools:text="@string/withdraw_all_units"/>

        <TextView
            android:id="@+id/tvRSAmount"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/default_space"
            android:text="@string/rs_symbol"
            android:textColor="@color/black"
            android:visibility="@{isAmountRedeem?View.VISIBLE:View.GONE}"
            app:layout_constraintBottom_toBottomOf="@id/edtAmount"
            app:layout_constraintStart_toStartOf="@id/edtAmount"
            app:layout_constraintTop_toTopOf="@id/edtAmount"
            tools:visibility="gone"/>

        <EditText
            android:id="@+id/edtAmount"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:layout_marginEnd="8dp"
            android:background="@drawable/shape_edt_gray_round"
            android:hint="@{isAmountRedeem?@string/enter_amount:@string/enter_units}"
            android:imeOptions="actionDone"
            android:inputType="numberDecimal"
            android:maxLines="1"
            android:maxLength="16"
            android:paddingStart="@dimen/space_30"
            android:paddingTop="@dimen/space_8"
            android:paddingEnd="@dimen/default_space"
            android:paddingBottom="@dimen/space_8"
            android:text="@={amount}"
            android:textAppearance="@style/TextAppearance.AppCompat.Small"
            android:textColor="@color/black"
            android:textColorHint="@color/darker_gray"
            app:layout_constraintBottom_toBottomOf="@+id/chkAmount"
            app:layout_constraintEnd_toStartOf="@+id/chkAmount"
            app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/tvAmountL" />

        <Button
            android:id="@+id/btnInvest"
            android:layout_width="match_parent"
            android:layout_height="@dimen/_36sdp"
            android:layout_marginTop="@dimen/default_space"
            android:layout_marginBottom="@dimen/space_4"
            android:background="@drawable/shape_btn_idle_bg"
            android:fontFamily="@font/lato_semibold"
            android:paddingStart="24dp"
            android:paddingEnd="24dp"
            android:text="@string/redeem"
            android:textColor="@color/white"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/edtAmount" />

    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>