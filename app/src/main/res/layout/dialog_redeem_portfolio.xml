<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <data>

        <variable
            name="folio"
            type="String" />

        <variable
            name="investmentAmount"
            type="String" />

        <variable
            name="amount"
            type="String" />

        <variable
            name="isSingleFolio"
            type="Boolean" />

        <import type="android.view.View" />

    </data>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/default_space"
        android:layout_marginEnd="@dimen/default_space"
        android:background="@drawable/shape_cart_view_16dp"
        android:padding="@dimen/default_space">

        <TextView
            android:id="@+id/tvInvestmentL"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/lato_semibold"
            android:text="@string/redeem"
            android:textColor="@color/black"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <ImageView
            android:id="@+id/tvClose"
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:src="@drawable/ic_close_black_24dp"
            android:tint="@color/dark"
            app:layout_constraintBottom_toBottomOf="@id/tvInvestmentL"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="@id/tvInvestmentL" />

        <TextView
            android:id="@+id/tvChooseFolio"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/default_space"
            android:text="@string/choose_folio"
            android:textAllCaps="true"
            android:textAppearance="@style/TextAppearance.AppCompat.Caption"
            android:visibility="@{isSingleFolio?View.GONE:View.VISIBLE}"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/tvInvestmentL" />

        <TextView
            android:id="@+id/edtChooseFolio"
            android:layout_width="match_parent"
            android:layout_height="36dp"
            android:layout_marginTop="@dimen/space_4"
            android:layout_marginEnd="@dimen/space_4"
            android:background="@drawable/shape_edt_gray_round"
            android:completionThreshold="1"
            android:drawableEnd="@drawable/ic_drop_down_dark_gray_24dp"
            android:drawablePadding="@dimen/space_8"
            android:hint="@string/choose_folio"
            android:maxLines="1"
            android:paddingStart="@dimen/default_space"
            android:paddingTop="@dimen/space_8"
            android:paddingEnd="@dimen/default_space"
            android:paddingBottom="@dimen/space_8"
            android:text="@={folio}"
            android:textAppearance="@style/TextAppearance.AppCompat.Small"
            android:textColor="@color/black"
            android:textColorHint="@color/darker_gray"
            android:visibility="@{isSingleFolio?View.GONE:View.VISIBLE}"
            app:layout_constraintHorizontal_weight="1"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/tvChooseFolio" />

        <TextView
            android:id="@+id/tvLumpsum"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/default_space"
            android:text="@string/total_units"
            android:textAllCaps="true"
            android:textAppearance="@style/TextAppearance.AppCompat.Caption"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/edtChooseFolio" />

        <EditText
            android:id="@+id/edtTotalInvestedAmount"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/space_4"
            android:background="@drawable/shape_edt_disable_gray_round"
            android:focusable="false"
            android:maxLines="1"
            android:nextFocusForward="@+id/edtSIPAmount"
            android:paddingStart="@dimen/space_30"
            android:paddingTop="@dimen/space_8"
            android:paddingEnd="@dimen/default_space"
            android:paddingBottom="@dimen/space_8"
            android:text="@={investmentAmount}"
            android:textAppearance="@style/TextAppearance.AppCompat.Small"
            android:textColor="@color/darker_gray"
            android:textColorHint="@color/darker_gray"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/tvLumpsum" />

        <TextView
            android:id="@+id/tvRSInvestedAmount"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/default_space"
            android:text="@string/rs_symbol"
            android:textColor="@color/darker_gray"
            android:visibility="gone"
            app:layout_constraintBottom_toBottomOf="@id/edtTotalInvestedAmount"
            app:layout_constraintStart_toStartOf="@id/edtTotalInvestedAmount"
            app:layout_constraintTop_toTopOf="@id/edtTotalInvestedAmount" />

        <TextView
            android:id="@+id/tvAmountL"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/default_space"
            android:text="@string/units_to_redeem"
            android:textAllCaps="true"
            android:textAppearance="@style/TextAppearance.AppCompat.Caption"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/edtTotalInvestedAmount" />

        <CheckBox
            android:id="@+id/chkAmount"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/space_8"
            android:button="@drawable/checkbox_redeem_folio"
            android:gravity="center_vertical"
            android:padding="8dp"
            android:text="@string/withdraw_all_units"
            android:textAppearance="@style/Base.TextAppearance.AppCompat.Caption"
            android:textColor="@color/darker_gray"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toBottomOf="@id/tvAmountL" />

        <TextView
            android:id="@+id/tvRSAmount"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/default_space"
            android:text="@string/rs_symbol"
            android:textColor="@color/black"
            android:visibility="gone"
            app:layout_constraintBottom_toBottomOf="@id/edtAmount"
            app:layout_constraintStart_toStartOf="@id/edtAmount"
            app:layout_constraintTop_toTopOf="@id/edtAmount" />

        <EditText
            android:id="@+id/edtAmount"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:layout_marginEnd="8dp"
            android:background="@drawable/shape_edt_gray_round"
            android:hint="@string/enter_units"
            android:imeOptions="actionDone"
            android:inputType="numberDecimal"
            android:maxLines="1"
            android:maxLength="16"
            android:paddingStart="@dimen/space_30"
            android:paddingTop="@dimen/space_8"
            android:paddingEnd="@dimen/default_space"
            android:paddingBottom="@dimen/space_8"
            android:text="@={amount}"
            android:textAppearance="@style/TextAppearance.AppCompat.Small"
            android:textColor="@color/black"
            android:textColorHint="@color/darker_gray"
            app:layout_constraintBottom_toBottomOf="@+id/chkAmount"
            app:layout_constraintEnd_toStartOf="@+id/chkAmount"
            app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/tvAmountL" />

        <Button
            android:id="@+id/btnInvest"
            android:layout_width="match_parent"
            android:layout_height="@dimen/_36sdp"
            android:layout_marginTop="@dimen/default_space"
            android:layout_marginBottom="@dimen/space_4"
            android:background="@drawable/shape_btn_idle_bg"
            android:fontFamily="@font/lato_semibold"
            android:paddingStart="24dp"
            android:paddingEnd="24dp"
            android:text="@string/redeem"
            android:textColor="@color/white"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/edtAmount" />

    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>