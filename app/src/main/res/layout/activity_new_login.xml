<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>

        <variable
            name="vm"
            type="com.tarrakki.module.login.NewLoginVM" />
    </data>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:fillViewport="true">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/white"
        tools:context=".module.login.NewLoginActivity">


        <RelativeLayout
            android:background="@color/white"
            app:layout_constraintTop_toTopOf="parent"
            android:layout_marginBottom="@dimen/_10sdp"
            app:layout_constraintBottom_toTopOf="@+id/etEmail"
            android:layout_width="match_parent"
            android:layout_height="0dp">

            <cn.trinea.android.view.autoscrollviewpager.AutoScrollViewPager
                android:id="@+id/pager_intro"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />

            <me.relex.circleindicator.CircleIndicator
                android:id="@+id/pageIndicator"
                android:layout_width="match_parent"
                android:layout_height="48dp"
                android:layout_alignParentBottom="true"
                app:ci_drawable="@drawable/intro_page_selected_new"
                app:ci_drawable_unselected="@drawable/intro_page_selected" />
        </RelativeLayout>



        <EditText
            android:id="@+id/etEmail"
            android:paddingTop="@dimen/_10sdp"
            android:paddingBottom="@dimen/_10sdp"
            android:paddingStart="@dimen/_5sdp"
            android:paddingEnd="@dimen/_5sdp"
            android:maxLines="1"
            android:ellipsize="end"
            android:inputType="text"
            android:textAppearance="@style/TextAppearance.AppCompat.Small"
            android:textSize="@dimen/_12ssp"
            android:textColor="@color/black"
            android:fontFamily="@font/poppins"
            android:textColorHint="@color/auto_cancel"
            android:hint="@string/enter_your_email_or_mobile"
            android:background="@drawable/bg_edit_text_corner"
            app:layout_constraintStart_toStartOf="@+id/btnContinue"
            app:layout_constraintEnd_toEndOf="@+id/btnContinue"
            app:layout_constraintBottom_toTopOf="@+id/btnContinue"
            android:layout_marginBottom="@dimen/_12sdp"
            android:layout_width="0dp"
            android:layout_height="wrap_content"/>


        <TextView
            android:id="@+id/btnContinue"
            android:text="@string/continues"
            android:textColor="@color/white"
            android:gravity="center"
            android:textSize="@dimen/_14ssp"
            android:paddingTop="@dimen/_10sdp"
            android:textAllCaps="false"
            android:fontFamily="@font/poppins_semibold"
            android:paddingBottom="@dimen/_10sdp"
            android:layout_marginStart="@dimen/_20sdp"
            android:layout_marginEnd="@dimen/_20sdp"
            app:layout_constraintBottom_toTopOf="@+id/tvOr"
            android:layout_marginBottom="@dimen/_16sdp"
            android:background="@drawable/bg_purple_button"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>

        <View
            android:id="@+id/viewLeft"
            android:layout_marginEnd="@dimen/_10sdp"
            android:background="@color/darker_gray"
            app:layout_constraintTop_toTopOf="@id/tvOr"
            app:layout_constraintBottom_toBottomOf="@+id/tvOr"
            app:layout_constraintEnd_toStartOf="@+id/tvOr"
            android:layout_width="@dimen/_65sdp"
            android:layout_height="@dimen/_1sdp"/>

        <View
            android:id="@+id/viewRight"
            android:layout_marginStart="@dimen/_10sdp"
            android:background="@color/darker_gray"
            app:layout_constraintTop_toTopOf="@id/tvOr"
            app:layout_constraintBottom_toBottomOf="@+id/tvOr"
            app:layout_constraintStart_toEndOf="@+id/tvOr"
            android:layout_width="@dimen/_65sdp"
            android:layout_height="@dimen/_1sdp"/>




        <TextView
            android:id="@+id/tvOr"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:text="@string/or"
            android:layout_marginBottom="@dimen/_12sdp"
            android:fontFamily="@font/poppins_semibold"
            android:textColor="@color/black"
            android:textSize="@dimen/_13ssp"
            app:layout_constraintBottom_toTopOf="@+id/cardGoogle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>

        <androidx.cardview.widget.CardView
            android:id="@+id/cardGoogle"
            android:layout_marginBottom="@dimen/_16sdp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintBottom_toTopOf="@+id/tvTermsConditions"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

            <ImageView
                android:id="@+id/ivGoogle"
                android:src="@drawable/ic_google_login_button"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintBottom_toTopOf="@+id/tvTermsConditions"
                android:layout_width="@dimen/_55sdp"
                android:layout_height="@dimen/_55sdp"/>

        </androidx.cardview.widget.CardView>



        <TextView
            android:id="@+id/tvTermsConditions"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/_20sdp"
            android:layout_marginEnd="@dimen/_20sdp"
            android:layout_marginBottom="@dimen/_20sdp"
            android:gravity="center"
            android:fontFamily="@font/poppins"
            android:text="@string/by_continue_terms_and_policy"
            android:textColor="@color/auto_cancel"
            android:textSize="@dimen/_11ssp"
            app:layout_constraintBottom_toBottomOf="parent" />


    </androidx.constraintlayout.widget.ConstraintLayout>
    </ScrollView>

</layout>
