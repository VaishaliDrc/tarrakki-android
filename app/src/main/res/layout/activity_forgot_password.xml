<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:app="http://schemas.android.com/apk/res-auto">

    <data>

        <variable
            name="vm"
            type="com.tarrakki.module.forgotpassword.ForgotPasswordVM" />
    </data>

    <android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".module.forgotpassword.ForgotPasswordActivity">

        <ImageView
            android:id="@+id/ivLogin"
            android:layout_width="225dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/space_50"
            android:adjustViewBounds="true"
            android:src="@drawable/ic_login"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/tvFPLbl"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/space_32"
            android:fontFamily="@font/lato_bold"
            android:text="@string/forgot_password_"
            android:textAppearance="@style/TextAppearance.AppCompat.Medium"
            android:textColor="@color/white"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/ivLogin" />

        <TextView
            android:id="@+id/tvFPDetails"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/space_32"
            android:layout_marginTop="@dimen/default_space"
            android:layout_marginEnd="@dimen/space_32"
            android:fontFamily="@font/lato_bold"
            android:gravity="center"
            android:text="@string/we_just_need_your_registered_email_id"
            android:textAppearance="@style/TextAppearance.AppCompat.Caption"
            android:textColor="@color/white"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/tvFPLbl" />

        <EditText
            android:id="@+id/edtEmail"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/space_32"
            android:layout_marginTop="@dimen/space_32"
            android:layout_marginEnd="@dimen/space_32"
            android:background="@drawable/shape_edt_white_round"
            android:hint="@string/email_address"
            android:inputType="textEmailAddress"
            android:maxLines="1"
            android:paddingStart="@dimen/default_space"
            android:paddingTop="@dimen/space_8"
            android:paddingEnd="@dimen/default_space"
            android:paddingBottom="@dimen/space_8"
            android:text="@={vm.email}"
            android:textColor="@color/white"
            android:textColorHint="@color/white"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/tvFPDetails" />

        <Button
            android:id="@+id/btnResetPassword"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/space_32"
            android:layout_marginTop="@dimen/default_space"
            android:layout_marginEnd="@dimen/space_32"
            android:background="@drawable/shape_btn_idle_bg"
            android:fontFamily="@font/lato_semibold"
            android:text="@string/reset_password"
            android:textAllCaps="true"
            android:textAppearance="@style/TextAppearance.AppCompat.Medium"
            android:textColor="@color/white"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/edtEmail" />

        <TextView
            android:id="@+id/tvBack"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/default_space"
            android:layout_marginEnd="@dimen/space_8"
            android:drawableStart="@drawable/ic_arrow_back_green_16dp"
            android:drawablePadding="@dimen/space_4"
            android:fontFamily="@font/lato_bold"
            android:gravity="center"
            android:padding="@dimen/space_4"
            android:text="@string/back"
            android:textColor="@color/colorAccent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/btnResetPassword" />

    </android.support.constraint.ConstraintLayout>
</layout>