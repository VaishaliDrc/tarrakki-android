<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>

        <variable
            name="yourGoal"
            type="com.tarrakki.module.yourgoal.YourGoalSteps" />

        <variable
            name="goal"
            type="com.tarrakki.api.model.Goal.Data.GoalData" />

        <variable
            name="onEditorAction"
            type="android.widget.TextView.OnEditorActionListener" />

    </data>

    <android.support.v4.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:fillViewport="true"
        tools:context=".module.yourgoal.YourGoalFragment">

        <android.support.constraint.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/default_space"
            android:background="@drawable/shape_cart_view"
            android:elevation="@dimen/space_2"
            android:padding="@dimen/space_8">

            <View
                android:id="@+id/mStepLine"
                android:layout_width="match_parent"
                android:layout_height="@dimen/space_8"
                android:layout_marginTop="@dimen/default_space"
                android:background="@drawable/shape_double_line"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <ImageView
                android:id="@+id/ivStep1"
                android:layout_width="32dp"
                android:layout_height="32dp"
                android:background="@color/white"
                app:imgUrl="@{yourGoal.drawable1}"
                app:layout_constraintBottom_toBottomOf="@id/mStepLine"
                app:layout_constraintStart_toStartOf="@id/mStepLine"
                app:layout_constraintTop_toTopOf="@id/mStepLine"
                tools:src="@drawable/shape_step_bg" />

            <ImageView
                android:id="@+id/ivStep2"
                android:layout_width="32dp"
                android:layout_height="32dp"
                android:background="@color/white"
                app:imgUrl="@{yourGoal.drawable2}"
                app:layout_constraintBottom_toBottomOf="@id/mStepLine"
                app:layout_constraintEnd_toEndOf="@id/mStepLine"
                app:layout_constraintStart_toStartOf="@id/mStepLine"
                app:layout_constraintTop_toTopOf="@id/mStepLine"
                tools:src="@drawable/shape_step_bg" />


            <ImageView
                android:id="@+id/ivStep3"
                android:layout_width="32dp"
                android:layout_height="32dp"
                android:background="@color/white"
                app:imgUrl="@{yourGoal.drawable3}"
                app:layout_constraintBottom_toBottomOf="@id/mStepLine"
                app:layout_constraintEnd_toEndOf="@id/mStepLine"
                app:layout_constraintTop_toTopOf="@id/mStepLine"
                tools:src="@drawable/shape_step_bg" />

            <android.support.v7.widget.CardView
                android:id="@+id/view2"
                android:layout_width="144dp"
                android:layout_height="144dp"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="@dimen/default_space"
                android:elevation="12dp"
                app:cardBackgroundColor="@color/circular_bg"
                app:cardCornerRadius="72dp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/ivStep2">

                <ImageView
                    android:id="@+id/imageView1"
                    imgUrl="@{goal.goalImage}"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:paddingStart="@dimen/space_8"
                    android:paddingEnd="@dimen/space_8"
                    android:paddingBottom="@dimen/space_40"
                    tools:src="@drawable/own_a_home" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="bottom"
                    android:layout_marginBottom="@dimen/space_30"
                    android:gravity="center"
                    android:maxLines="2"
                    android:minLines="2"
                    android:paddingStart="@dimen/space_5"
                    android:paddingEnd="@dimen/space_5"
                    android:text="@{goal.goal}"
                    android:textAllCaps="true"
                    android:textColor="@color/semi_black"
                    android:textSize="@dimen/sp10"
                    tools:text="Children's Education" />

            </android.support.v7.widget.CardView>

            <LinearLayout
                android:id="@+id/llContainer"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                app:layout_constraintTop_toBottomOf="@+id/view2" />
