<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>

        <variable
            name="vm"
            type="com.tarrakki.module.bankmandate.AutoMandateVM" />
    </data>

    <androidx.core.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".module.bankmandate.AutoDebitFragment">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="@dimen/default_space">

            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/shape_cart_view"
                android:elevation="@dimen/space_2"
                android:padding="@dimen/space_8">

                <ImageView
                    android:id="@+id/ivBank"
                    imgUrl="@{vm.bankMandate.bankLogo}"
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:src="@drawable/temp_icici"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent" />

                <TextView
                    android:id="@+id/tvName"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="@dimen/space_8"
                    android:layout_marginEnd="4dp"
                    android:fontFamily="@font/lato_semibold"
                    android:maxLines="1"
                    android:text="@{vm.bankMandate.branchBankIdBankName}"
                    android:textAppearance="@style/TextAppearance.AppCompat.Small"
                    android:textColor="@color/item_selected_color"
                    app:layout_constraintBottom_toBottomOf="@id/ivBank"
                    app:layout_constraintEnd_toStartOf="@+id/cmDefault"
                    app:layout_constraintStart_toEndOf="@id/ivBank"
                    app:layout_constraintTop_toTopOf="@id/ivBank"
                    tools:text="ICICI Bank" />

                <RadioButton
                    android:id="@+id/cmDefault"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:checked="true"
                    android:textAppearance="@style/TextAppearance.AppCompat.Small"
                    android:textColor="@color/white"
                    android:textSize="@dimen/sp10"
                    android:visibility="gone"
                    app:layout_constraintBottom_toBottomOf="@+id/ivBank"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintTop_toTopOf="@+id/ivBank" />

                <View
                    android:id="@+id/mDivider"
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:layout_marginTop="@dimen/space_8"
                    android:background="@color/darker_gray"
                    app:layout_constraintTop_toBottomOf="@+id/ivBank" />

                <TextView
                    android:id="@+id/tvAccountNoL"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/space_8"
                    android:text="@string/account_number"
                    android:textAppearance="@style/TextAppearance.AppCompat.Caption"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@id/mDivider" />

                <TextView
                    android:id="@+id/tvAccountNo"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/lato_semibold"
                    android:text="@{vm.bankMandate.accountNumber}"
                    android:textAppearance="@style/TextAppearance.AppCompat.Caption"
                    android:textColor="@color/semi_black"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/tvAccountNoL"
                    tools:text="1210000091052" />

                <TextView
                    android:id="@+id/tvBreachNameL"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/space_8"
                    android:text="@string/breach_name"
                    android:textAppearance="@style/TextAppearance.AppCompat.Caption"
                    app:layout_constraintStart_toStartOf="@+id/gdlCenter"
                    app:layout_constraintTop_toBottomOf="@id/mDivider" />

                <TextView
                    android:id="@+id/tvBreachName"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginEnd="8dp"
                    android:fontFamily="@font/lato_semibold"
                    android:maxLines="2"
                    android:text="@{vm.bankMandate.branchBranchName}"
                    android:textAppearance="@style/TextAppearance.AppCompat.Caption"
                    android:textColor="@color/semi_black"
                    app:layout_constraintEnd_toStartOf="@+id/tvIFSCCode"
                    app:layout_constraintStart_toStartOf="@id/tvBreachNameL"
                    app:layout_constraintTop_toBottomOf="@+id/tvBreachNameL"
                    tools:text="Ahmedabad" />

                <TextView
                    android:id="@+id/tvIFSCCodeLabel"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/space_8"
                    android:text="@string/ifsc_code"
                    android:textAppearance="@style/TextAppearance.AppCompat.Caption"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintHorizontal_bias="0"
                    app:layout_constraintStart_toStartOf="@id/tvIFSCCode"
                    app:layout_constraintTop_toBottomOf="@id/mDivider" />

                <TextView
                    android:id="@+id/tvIFSCCode"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/lato_semibold"
                    android:minWidth="80dp"
                    android:text="@{vm.bankMandate.branchIfscCode}"
                    android:textAppearance="@style/TextAppearance.AppCompat.Caption"
                    android:textColor="@color/semi_black"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/tvIFSCCodeLabel"
                    tools:text="IC1C00000457" />

                <androidx.constraintlayout.widget.Guideline
                    android:id="@+id/gdlCenter"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    app:layout_constraintGuide_percent="0.40" />


            </androidx.constraintlayout.widget.ConstraintLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/default_space"
                android:background="@drawable/shape_cart_view"
                android:elevation="@dimen/space_2"
                android:gravity="center_horizontal"
                android:orientation="vertical"
                android:padding="@dimen/space_8">

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/space_8"
                    android:gravity="center"
                    android:orientation="horizontal">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:drawablePadding="@dimen/space_4"
                        android:fontFamily="@font/lato_semibold"
                        android:gravity="center_vertical"
                        android:text="@string/max_auto_debit"
                        android:textColor="@color/black" />

                    <ImageView
                        android:id="@+id/ivInfo"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="@dimen/_4sdp"
                        android:padding="@dimen/_4sdp"
                        android:src="@drawable/ic_info" />

                </LinearLayout>

                <RelativeLayout
                    android:id="@+id/llContainer"
                    android:layout_width="168dp"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/space_8"
                    android:background="@drawable/shape_edt_gray_round"
                    android:gravity="center_vertical"
                    android:orientation="horizontal"
                    android:padding="@dimen/space_8"
                    app:layout_constraintEnd_toStartOf="@id/edtYears"
                    app:layout_constraintHorizontal_weight="1.2"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/tvInvestL">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="@dimen/space_4"
                        android:layout_marginEnd="@dimen/space_4"
                        android:fontFamily="@font/lato_bold"
                        android:text="@string/rs_symbol"
                        android:textAppearance="@style/TextAppearance.AppCompat.Small"
                        android:textColor="@color/semi_black" />

                    <EditText
                        android:id="@+id/edtInvestAmount"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:background="@null"
                        android:fontFamily="@font/lato_bold"
                        android:gravity="center"
                        android:imeOptions="actionDone"
                        android:inputType="number"
                        android:paddingStart="@dimen/default_space"
                        android:paddingEnd="@dimen/default_space"
                        android:text="@={vm.amount}"
                        android:textAppearance="@style/TextAppearance.AppCompat.Small"
                        android:textColor="@color/semi_black" />

                </RelativeLayout>


                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:layout_marginTop="@dimen/default_space"
                    android:background="@color/darker_gray" />

                <androidx.recyclerview.widget.RecyclerView
                    android:id="@+id/rvAmounts"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/default_space"
                    android:layout_marginBottom="@dimen/space_8"
                    android:orientation="horizontal"
                    android:overScrollMode="never"
                    app:dividerH="@{@drawable/shape_transferant_divider}"
                    app:dividerV="@{@drawable/shape_transferant_divider}"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent"
                    tools:itemCount="2"
                    tools:layoutManager="androidx.recyclerview.widget.LinearLayoutManager"
                    tools:listitem="@layout/row_auto_debit_amount_list_item" />

            </LinearLayout>

            <Button
                android:id="@+id/btnContinue"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/default_space"
                android:layout_marginBottom="@dimen/space_4"
                android:background="@drawable/shape_btn_idle_bg"
                android:fontFamily="@font/lato_bold"
                android:text="@string/txtcontinue"
                android:textColor="@color/white" />

        </LinearLayout>

    </androidx.core.widget.NestedScrollView>

</layout>