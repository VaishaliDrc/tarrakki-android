<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <data>

        <variable
            name="vm"
            type="com.tarrakki.module.risk_assessment_agree.AssessmentDeclarationVM" />
    </data>


    <androidx.core.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".module.risk_assesment.AssessmentQFragment">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/_16sdp"
            android:elevation="2dp"
            android:orientation="vertical">

            <LinearLayout
                android:background="@drawable/shape_cart_view"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:gravity="center_horizontal"
                android:elevation="2dp"
                android:padding="@dimen/_8sdp"
                android:orientation="vertical">

                <androidx.cardview.widget.CardView
                    android:layout_width="72dp"
                    android:layout_height="72dp"
                    android:elevation="12dp"
                    app:cardBackgroundColor="@color/circular_bg"
                    app:cardCornerRadius="36dp"
                    android:layout_marginTop="@dimen/space_8">

                    <ImageView
                        android:id="@+id/ivProfile"
                        android:src="@drawable/icon_nach"
                        android:layout_gravity="center"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:padding="@dimen/default_space"
                        tools:src="@drawable/ic_upload" />

                </androidx.cardview.widget.CardView>

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/space_12"
                    android:text="I confirm that I have conducted my risk profiling and I am aware about the outcome of the same. However, in future, I may take investment decision through Tarrakki platform which may or may not be in conformity with my risk profile. I further acknowledge that the risk associated with the investment decision taken by me is my sole risk and to be borne entirely by me. Investment adviser is not responsible for the same."
                    android:textColor="@color/black" />

            </LinearLayout>

            <Button
                android:id="@+id/btnAgree"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:background="@drawable/shape_btn_idle_bg"
                android:fontFamily="@font/lato_semibold"
                android:gravity="center"
                android:paddingStart="20dp"
                android:layout_marginTop="@dimen/space_16"
                android:paddingEnd="24dp"
                android:text="Agree"
                android:textAllCaps="false"
                android:textColor="@color/white"
                />

        </LinearLayout>

    </androidx.core.widget.NestedScrollView>
</layout>