<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>

        <variable
            name="invest"
            type="com.tarrakki.api.model.HomeData.Data.Category.SecondLevelCategory.ThirdLevelCategory" />
    </data>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="@dimen/space_8">

        <ImageView
            android:id="@+id/ivPrevious"
            android:layout_width="32dp"
            android:layout_height="32dp"
            android:background="@{invest.hasPrevious? @drawable/circular_bg_green : @drawable/circular_bg_gray}"
            android:padding="@dimen/space_8"
            android:src="@drawable/prev_arrow"
            app:layout_constraintBottom_toBottomOf="@id/view2"
            app:layout_constraintEnd_toStartOf="@id/view2"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="@id/view2"
            tools:background="@drawable/circular_bg_gray" />

        <ImageView
            android:id="@+id/ivNext"
            android:layout_width="32dp"
            android:layout_height="32dp"
            android:background="@{invest.hasNext? @drawable/circular_bg_green : @drawable/circular_bg_gray}"
            android:padding="@dimen/space_8"
            android:src="@drawable/next_arrow"
            app:layout_constraintBottom_toBottomOf="@id/view2"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toEndOf="@id/view2"
            app:layout_constraintTop_toTopOf="@id/view2"
            tools:background="@drawable/circular_bg_green" />

        <androidx.cardview.widget.CardView
            android:id="@+id/view2"
            android:layout_width="144dp"
            android:layout_height="144dp"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="@dimen/default_space"
            android:elevation="12dp"
            app:cardBackgroundColor="@color/circular_bg"
            app:cardCornerRadius="72dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent">

            <ImageView
                android:id="@+id/imageView1"
                imgUrl="@{invest.categoryImage}"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:paddingStart="@dimen/space_8"
                android:paddingEnd="@dimen/space_8"
                android:paddingBottom="@dimen/space_40"
                tools:src="@drawable/own_a_home" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="bottom"
                android:layout_marginBottom="@dimen/space_30"
                android:gravity="center"
                android:maxLines="2"
                android:minLines="2"
                android:paddingStart="@dimen/space_5"
                android:paddingEnd="@dimen/space_5"
                android:text="@{invest.categoryName}"
                android:textAllCaps="true"
                android:textColor="@color/semi_black"
                android:textSize="@dimen/sp10"
                tools:text="Children's Education" />

        </androidx.cardview.widget.CardView>

        <TextView
            android:id="@+id/tvRiskLevel"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/space_8"
            android:layout_marginTop="@dimen/default_space"
            android:layout_marginEnd="@dimen/space_8"
            android:background="@drawable/shape_risk_level_bg"
            android:drawablePadding="@dimen/space_8"
            android:fontFamily="@font/lato_semibold"
            android:gravity="center_vertical"
            android:minWidth="120dp"
            android:padding="@dimen/space_8"
            android:text="@{invest.riskLevel}"
            android:textAppearance="@style/TextAppearance.AppCompat.Caption"
            android:textColor="@color/name_aggressive"
            android:visibility="@{invest.riskLevelVisible}"
            app:layout_constraintEnd_toStartOf="@id/glCenter"
            app:layout_constraintTop_toBottomOf="@id/view2"
            tools:text="High Risk" />

        <TextView
            android:id="@+id/tvReturnLevel"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/space_8"
            android:layout_marginTop="@dimen/default_space"
            android:layout_marginEnd="@dimen/space_8"
            android:background="@drawable/shape_risk_to_revord_level_bg"
            android:drawablePadding="@dimen/space_8"
            android:fontFamily="@font/lato_semibold"
            android:gravity="center_vertical"
            android:minWidth="120dp"
            android:padding="@dimen/space_8"
            android:text="@{invest.returnLevel}"
            android:textAppearance="@style/TextAppearance.AppCompat.Caption"
            android:textColor="@color/pdlg_color_green"
            android:visibility="@{invest.returnRiskVisible}"
            app:layout_constraintStart_toStartOf="@id/glCenter"
            app:layout_constraintTop_toBottomOf="@id/view2"
            tools:text="High Return" />

        <androidx.constraintlayout.widget.Guideline
            android:id="@+id/glCenter"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            app:layout_constraintGuide_percent="0.5" />

        <View
            android:id="@+id/mDivider"
            android:layout_width="wrap_content"
            android:layout_height="1dp"
            android:layout_marginTop="@dimen/default_space"
            android:background="@color/lighter_gray"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/tvRiskLevel" />

        <TextView
            android:id="@+id/tvSortDescription"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/default_space"
            android:lineSpacingExtra="@dimen/space_4"
            android:text="@{invest.shortDescroption}"
            android:textAppearance="@style/TextAppearance.AppCompat.Caption"
            app:layout_constraintTop_toBottomOf="@id/mDivider"
            tools:text="An aggressive investment strategy involves allocating more money to direct equity, and less money to bonds." />

        <TextView
            android:id="@+id/tvDescription"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/default_space"
            android:lineSpacingExtra="@dimen/space_4"
            android:text="@{invest.categoryDesctiption}"
            android:textAppearance="@style/TextAppearance.AppCompat.Caption"
            app:layout_constraintTop_toBottomOf="@id/tvSortDescription"
            tools:layout_editor_absoluteX="8dp"
            tools:text="An aggressive investment strategy involves allocating more money to direct equity, and less money to bonds." />

        <Button
            android:id="@+id/btnSelect"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/default_space"
            android:layout_marginBottom="4dp"
            android:background="@drawable/shape_btn_idle_bg"
            android:fontFamily="@font/lato_bold"
            android:text="@string/select"
            android:textColor="@color/white"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/tvDescription"
            app:layout_constraintVertical_bias="0.0"
            tools:layout_editor_absoluteX="8dp" />

    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>