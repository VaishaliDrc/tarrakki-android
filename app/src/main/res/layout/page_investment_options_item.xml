<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>

        <variable
            name="invest"
            type="com.tarrakki.module.investmentstrategies.InvestmentOption" />
    </data>

    <android.support.constraint.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="@dimen/space_8">

        <ImageView
            android:id="@+id/ivPrevious"
            android:layout_width="32dp"
            android:layout_height="32dp"
            android:background="@{invest.hasPrevious? @drawable/circular_bg_green : @drawable/circular_bg_gray}"
            android:padding="@dimen/space_8"
            android:src="@drawable/prev_arrow"
            app:layout_constraintBottom_toBottomOf="@id/view2"
            app:layout_constraintEnd_toStartOf="@id/view2"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="@id/view2"
            tools:background="@drawable/circular_bg_gray" />

        <ImageView
            android:id="@+id/ivNext"
            android:layout_width="32dp"
            android:layout_height="32dp"
            android:background="@{invest.hasNext? @drawable/circular_bg_green : @drawable/circular_bg_gray}"
            android:padding="@dimen/space_8"
            android:src="@drawable/next_arrow"
            app:layout_constraintBottom_toBottomOf="@id/view2"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toEndOf="@id/view2"
            app:layout_constraintTop_toTopOf="@id/view2"
            tools:background="@drawable/circular_bg_green" />

        <android.support.v7.widget.CardView
            android:id="@+id/view2"
            android:layout_width="144dp"
            android:layout_height="144dp"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="@dimen/default_space"
            android:elevation="12dp"
            app:cardCornerRadius="72dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent">

            <ImageView
                android:id="@+id/imageView1"
                imgUrl="@{invest.imgRes}"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                tools:src="@drawable/ic_aggressive" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="bottom"
                android:layout_marginBottom="24dp"
                android:fontFamily="@font/lato_bold"
                android:gravity="center"
                android:maxLines="2"
                android:minLines="2"
                android:paddingStart="@dimen/space_5"
                android:paddingEnd="@dimen/space_5"
                android:text="@{invest.title}"
                android:textAllCaps="true"
                android:textColor="@color/semi_black"
                android:textSize="@dimen/sp10"
                tools:text="Aggressive" />

        </android.support.v7.widget.CardView>

        <TextView
            android:id="@+id/tvRiskLevel"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/space_8"
            android:layout_marginTop="@dimen/default_space"
            android:layout_marginEnd="@dimen/space_8"
            android:background="@drawable/shape_risk_level_bg"
            android:drawableStart="@{invest.riskLevelIMGRes}"
            android:drawablePadding="@dimen/space_8"
            android:fontFamily="@font/lato_semibold"
            android:gravity="center_vertical"
            android:minWidth="120dp"
            android:padding="@dimen/space_8"
            android:text="@{invest.riskLevel}"
            android:textAppearance="@style/TextAppearance.AppCompat.Caption"
            android:textColor="@color/name_aggressive"
            app:layout_constraintEnd_toStartOf="@id/glCenter"
            app:layout_constraintTop_toBottomOf="@id/view2"
            tools:drawableStart="@drawable/ic_red_up"
            tools:text="High Risk" />

        <TextView
            android:id="@+id/tvReturnLevel"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/space_8"
            android:layout_marginTop="@dimen/default_space"
            android:layout_marginEnd="@dimen/space_8"
            android:background="@drawable/shape_risk_to_revord_level_bg"
            android:drawableStart="@{invest.returnOnRiskLevelIMGRes}"
            android:drawablePadding="@dimen/space_8"
            android:fontFamily="@font/lato_semibold"
            android:gravity="center_vertical"
            android:minWidth="120dp"
            android:padding="@dimen/space_8"
            android:text="@{invest.returnOnRiskLevel}"
            android:textAppearance="@style/TextAppearance.AppCompat.Caption"
            android:textColor="@color/pdlg_color_green"
            app:layout_constraintStart_toStartOf="@id/glCenter"
            app:layout_constraintTop_toBottomOf="@id/view2"
            tools:drawableStart="@drawable/ic_green_up"
            tools:text="High Return" />

        <android.support.constraint.Guideline
            android:id="@+id/glCenter"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            app:layout_constraintGuide_percent="0.5" />

        <View
            android:id="@+id/mDivider"
            android:layout_width="wrap_content"
            android:layout_height="1dp"
            android:layout_marginTop="@dimen/default_space"
            android:background="@color/lighter_gray"
            app:layout_constraintTop_toBottomOf="@id/tvRiskLevel" />

        <TextView
            android:id="@+id/tvSortDescription"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/default_space"
            android:lineSpacingExtra="@dimen/space_4"
            android:text="@{invest.sortDescription}"
            android:textAppearance="@style/TextAppearance.AppCompat.Caption"
            app:layout_constraintTop_toBottomOf="@id/mDivider"
            tools:text="An aggressive investment strategy involves allocating more money to direct equity, and less money to bonds." />

        <TextView
            android:id="@+id/tvDescriptionTitle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/default_space"
            android:lineSpacingExtra="@dimen/space_4"
            android:text="@string/opt_for_this_if"
            android:textColor="@color/black"
            app:layout_constraintTop_toBottomOf="@id/tvSortDescription" />

        <TextView
            android:id="@+id/tvDescription"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/default_space"
            android:lineSpacingExtra="@dimen/space_4"
            android:text="@{invest.descriptions}"
            android:textAppearance="@style/TextAppearance.AppCompat.Caption"
            app:layout_constraintTop_toBottomOf="@id/tvDescriptionTitle"
            tools:text="An aggressive investment strategy involves allocating more money to direct equity, and less money to bonds." />

        <Button
            android:id="@+id/btnSelect"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/default_space"
            android:layout_marginBottom="4dp"
            android:background="@drawable/shape_btn_idle_bg"
            android:fontFamily="@font/lato_bold"
            android:text="@string/select"
            android:textAllCaps="false"
            android:textAppearance="@style/TextAppearance.AppCompat.Small"
            android:textColor="@color/white"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/tvDescription" />

    </android.support.constraint.ConstraintLayout>
</layout>