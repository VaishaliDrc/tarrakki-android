<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>

        <variable
            name="vm"
            type="com.tarrakki.module.learn.LearnVM" />
    </data>

    <androidx.swiperefreshlayout.widget.SwipeRefreshLayout
        android:id="@+id/mRefresh"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/rvArticles"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:clipToPadding="false"
            android:paddingTop="@dimen/default_space"
            app:dividerV="@{@drawable/shape_transferant_divider_16dp}"
            app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager"
            tools:context=".module.learn.LearnFragment"
            tools:itemCount="5"
            tools:listitem="@layout/row_article_list_item" />

    </androidx.swiperefreshlayout.widget.SwipeRefreshLayout>

</layout>