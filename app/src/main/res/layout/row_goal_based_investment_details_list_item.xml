<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>

        <variable
            name="investment"
            type="com.tarrakki.module.portfolio.PortfolioFund" />
    </data>

    <android.support.constraint.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingTop="@dimen/space_4"
        android:paddingBottom="@dimen/space_8"
        tools:layout_marginBottom="@dimen/space_16">

        <TextView
            android:id="@+id/tvName"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginEnd="8dp"
            android:fontFamily="@font/lato_semibold"
            android:maxLines="2"
            android:text="@{investment.name}"
            android:textAllCaps="true"
            android:textAppearance="@style/TextAppearance.AppCompat.Small"
            android:textColor="@color/black"
            app:layout_constraintBottom_toBottomOf="@+id/cbStartStop"
            app:layout_constraintEnd_toStartOf="@+id/tvEdit"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            tools:text="Home Goal" />

        <TextView
            android:id="@+id/tvEdit"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="@dimen/space_8"
            android:drawableStart="@drawable/ic_redeem"
            android:drawablePadding="@dimen/_4sdp"
            android:gravity="center"
            android:text="@string/redeem"
            android:textColor="@color/colorAccent"
            app:layout_constraintBottom_toBottomOf="@+id/cbStartStop"
            app:layout_constraintEnd_toStartOf="@id/cbStartStop"
            app:layout_constraintTop_toTopOf="parent" />

        <CheckBox
            android:id="@+id/cbStartStop"
            android:layout_width="68dp"
            android:layout_height="wrap_content"
            android:buttonTint="@color/colorAccent"
            android:checked="@={investment.start}"
            android:text="@{investment.start ? @string/start : @string/stop}"
            android:textColor="@color/colorAccent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            tools:checked="false"
            tools:text="@string/stop" />

        <TextView
            android:id="@+id/tvLastPriceL"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/default_space"
            android:text="@string/total_investment_"
            android:textAppearance="@style/TextAppearance.AppCompat.Caption"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/tvName" />

        <TextView
            android:id="@+id/tvLastPrice"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/lato_semibold"
            android:textAppearance="@style/TextAppearance.AppCompat.Caption"
            android:textColor="@color/semi_black"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/tvLastPriceL"
            app:price="@{investment.totalInvestment}"
            tools:text="\u20B939.55" />

        <TextView
            android:id="@+id/tvDayChangeL"
            android:layout_width="wrap_content"
            android:layout_height="14dp"
            android:layout_marginTop="@dimen/default_space"
            android:text="@string/current_value_"
            android:textAppearance="@style/TextAppearance.AppCompat.Caption"
            app:layout_constraintStart_toStartOf="@+id/gdlCenter"
            app:layout_constraintTop_toBottomOf="@id/tvName" />

        <TextView
            android:id="@+id/tvDayChange"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/lato_semibold"
            android:textAppearance="@style/TextAppearance.AppCompat.Caption"
            android:textColor="@color/semi_black"
            app:layout_constraintStart_toStartOf="@id/tvDayChangeL"
            app:layout_constraintTop_toBottomOf="@+id/tvDayChangeL"
            app:price="@{investment.currentValue}"
            tools:text="@string/dummy3" />

        <android.support.constraint.Guideline
            android:id="@+id/gdlCenter"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            app:layout_constraintGuide_percent="0.42" />


    </android.support.constraint.ConstraintLayout>
</layout>