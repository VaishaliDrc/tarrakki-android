<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>

        <variable
            name="widget"
            type="com.tarrakki.api.model.TransactionStatus" />

        <variable
            name="isExpanded"
            type="Boolean" />

        <import type="android.view.View"/>

    </data>

    <LinearLayout
        android:layout_marginBottom="@dimen/space_16"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/shape_cart_view"
        android:elevation="@dimen/space_2"
        android:gravity="center_horizontal"
        android:orientation="vertical"
        android:padding="@dimen/space_8">

        <android.support.constraint.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:id="@+id/tvName"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginEnd="@dimen/space_12"
                android:layout_toStartOf="@id/tvAmount"
                android:gravity="start"
                android:text="@{widget.schemeName}"
                android:textAppearance="@style/TextAppearance.AppCompat.Small"
                android:textColor="@color/item_selected_color"
                app:layout_constraintEnd_toStartOf="@id/tvAmount"
                app:layout_constraintHorizontal_bias="0.0"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                tools:text="SBI Banking and Financial Services Growth Direct Plan Growthddddddddd" />

            <TextView
                android:id="@+id/tvAmount"
                price="@{widget.amount}"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_toStartOf="@id/imgArrow"
                android:textAppearance="@style/TextAppearance.AppCompat.Small"
                android:textColor="@color/black"
                app:layout_constraintEnd_toStartOf="@id/imgArrow"
                app:layout_constraintTop_toTopOf="parent"
                tools:text="545454" />

            <ImageView
                android:paddingStart="12dp"
                android:id="@+id/imgArrow"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentEnd="true"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                android:visibility="@{widget.isSuccess==true?View.VISIBLE:View.GONE}"
                android:src="@{isExpanded ? @drawable/ic_arrow_up : @drawable/ic_arrow_down}"
                />

        </android.support.constraint.ConstraintLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/space_8"
                android:layout_toStartOf="@id/lyt_status"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Type:"
                    android:textAppearance="@style/Base.TextAppearance.AppCompat.Caption" />

                <TextView
                    android:id="@+id/tvType"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:paddingStart="@dimen/space_4"
                    android:text="@{widget.type}"
                    android:textAppearance="@style/Base.TextAppearance.AppCompat.Caption"
                    android:textColor="@color/darker_gray" />

            </LinearLayout>

            <LinearLayout
                android:id="@+id/lyt_status"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentEnd="true"
                android:layout_marginTop="@dimen/space_8"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Status:"
                    android:textAppearance="@style/Base.TextAppearance.AppCompat.Caption" />

                <TextView
                    android:id="@+id/tvStatus"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:paddingStart="@dimen/space_4"
                    android:text='@{widget.isSuccess==true?"Success":"Failed"}'
                    android:textAppearance="@style/Base.TextAppearance.AppCompat.Caption"
                    android:textColor="@{widget.isSuccess==true?@color/colorAccent:@color/red}" />

            </LinearLayout>
        </RelativeLayout>

        <View
            android:layout_marginTop="@dimen/space_8"
            android:visibility="@{widget.success==false?View.VISIBLE:View.GONE}"
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@color/lighter_gray"/>

        <net.cachapa.expandablelayout.ExpandableLayout
            android:id="@+id/expStatus"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:el_duration="500">

            <android.support.v7.widget.RecyclerView
                android:layout_marginTop="@dimen/space_16"
                android:id="@+id/rvTransactionStatus"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:nestedScrollingEnabled="false"
                app:layoutManager="android.support.v7.widget.LinearLayoutManager" />

        </net.cachapa.expandablelayout.ExpandableLayout>

        <LinearLayout
            android:visibility="@{widget.isSuccess==false?View.VISIBLE:View.GONE}"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/space_8"
            android:orientation="horizontal">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Remarks:"
                android:textAppearance="@style/Base.TextAppearance.AppCompat.Caption" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingStart="@dimen/space_4"
                android:text="@{widget.bseRemarks}"
                android:textAppearance="@style/Base.TextAppearance.AppCompat.Caption"
                android:textColor="@color/darker_gray" />

        </LinearLayout>

    </LinearLayout>

</layout>